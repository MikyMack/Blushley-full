    <script>
        // API Configuration
        const CATEGORY_API = {
            create: "/category/create",
            update: (id) => `/category/update/${id}`,
            toggle: (id) => `/category/toggle/${id}`,
            delete: (id) => `/category/delete/${id}`
        };

        const SUBCATEGORY_API = {
            create: "/subcategory/create",
            update: (id) => `/subcategory/update/${id}`,
            toggle: (id) => `/subcategory/toggle/${id}`,
            delete: (id) => `/subcategory/delete/${id}`
        };

        const CHILDCATEGORY_API = {
            create: "/childcategory/create",
            update: (id) => `/childcategory/update/${id}`,
            toggle: (id) => `/childcategory/toggle/${id}`,
            delete: (id) => `/childcategory/delete/${id}`
        };

        // Utility Functions
        const apiCall = async (url, options = {}) => {
            try {
                const response = await fetch(url, {
                    method: options.method || 'GET',
                    headers: {
                        'Accept': 'application/json',
                        ...options.headers
                    },
                    ...options
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                return await response.json();
            } catch (error) {
                console.error('API call failed:', error);
                throw error;
            }
        };

        const showNotification = (message, type = 'success') => {
            const notification = document.createElement('div');
            notification.className = `notification ${type}`;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.remove();
            }, 3000);
        };

        // Category Management JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            // Get DOM elements
            const createCategoryBtn = document.getElementById('create-category-btn');
            const createCategoryModal = document.getElementById('create-category-modal');
            const closeCategoryModalBtn = document.getElementById('close-category-modal');
            const cancelCategoryBtn = document.getElementById('cancel-category');
            const saveCategoryBtn = document.getElementById('save-category');
            const addSubcategoryBtn = document.getElementById('add-subcategory');
            const subcategoryList = document.getElementById('subcategory-list');
            const addChildcategoryBtn = document.getElementById('add-childcategory');
            const childcategoryList = document.getElementById('childcategory-list');

            // Initialize event listeners
            if (createCategoryBtn) {
                createCategoryBtn.addEventListener('click', function(e) {
                    e.preventDefault();

                    // Reset form
                    document.getElementById('category-name').value = '';
                    document.getElementById('category-description').value = '';
                    document.getElementById('category-icon').value = '';

                    // Reset subcategories and child categories
                    subcategoryList.innerHTML = `
                        <div class="subcategory-item">
                            <input type="text" class="subcategory-input" placeholder="Enter subcategory name">
                            <button class="subcategory-remove-btn">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    `;

                    childcategoryList.innerHTML = `
                        <div class="subcategory-item">
                            <input type="text" class="subcategory-input" placeholder="Enter child category name">
                            <select class="category-form-select childcategory-parent" style="width: 100%; margin-bottom: 5px;">
                                <option value="">Select Parent Subcategory</option>
                            </select>
                            <button class="subcategory-remove-btn">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    `;

                    // Show modal
                    createCategoryModal.style.display = 'flex';
                });
            }

            if (closeCategoryModalBtn) {
                closeCategoryModalBtn.addEventListener('click', function() {
                    createCategoryModal.style.display = 'none';
                });
            }

            if (cancelCategoryBtn) {
                cancelCategoryBtn.addEventListener('click', function() {
                    createCategoryModal.style.display = 'none';
                });
            }

            if (addSubcategoryBtn) {
                addSubcategoryBtn.addEventListener('click', function() {
                    const newSubcategory = document.createElement('div');
                    newSubcategory.className = 'subcategory-item';
                    newSubcategory.innerHTML = `
                        <input type="text" class="subcategory-input" placeholder="Enter subcategory name">
                        <button class="subcategory-remove-btn">
                            <i class="fas fa-times"></i>
                        </button>
                    `;

                    subcategoryList.appendChild(newSubcategory);
                    updateChildCategoryParents();
                });
            }

            if (addChildcategoryBtn) {
                addChildcategoryBtn.addEventListener('click', function() {
                    const newChildcategory = document.createElement('div');
                    newChildcategory.className = 'subcategory-item';
                    newChildcategory.innerHTML = `
                        <input type="text" class="subcategory-input" placeholder="Enter child category name">
                        <select class="category-form-select childcategory-parent" style="width: 100%; margin-bottom: 5px;">
                            <option value="">Select Parent Subcategory</option>
                        </select>
                        <button class="subcategory-remove-btn">
                            <i class="fas fa-times"></i>
                        </button>
                    `;

                    childcategoryList.appendChild(newChildcategory);
                    updateChildCategoryParents();
                });
            }

            // Add event listeners for remove buttons
            function addRemoveButtonListeners() {
                document.querySelectorAll('.subcategory-remove-btn').forEach(btn => {
                    btn.addEventListener('click', function() {
                        this.closest('.subcategory-item').remove();
                        updateChildCategoryParents();
                    });
                });
            }

            // Initialize remove button listeners
            addRemoveButtonListeners();

            // Function to update child category parent options
            function updateChildCategoryParents() {
                const subcategories = Array.from(document.querySelectorAll('#subcategory-list .subcategory-input'))
                    .map(input => input.value.trim())
                    .filter(value => value !== '');

                const childcategoryParents = document.querySelectorAll('.childcategory-parent');

                childcategoryParents.forEach(select => {
                    const currentValue = select.value;
                    select.innerHTML = '<option value="">Select Parent Subcategory</option>';

                    subcategories.forEach(subcategory => {
                        const option = document.createElement('option');
                        option.value = subcategory;
                        option.textContent = subcategory;

                        if (currentValue === subcategory) {
                            option.selected = true;
                        }

                        select.appendChild(option);
                    });
                });
            }

            // Save category function
            if (saveCategoryBtn) {
                saveCategoryBtn.addEventListener('click', async function(e) {
                    e.preventDefault();

                    // Get form values
                    const categoryName = document.getElementById('category-name').value.trim();
                    const categoryDescription = document.getElementById('category-description').value.trim();
                    const categoryIcon = document.getElementById('category-icon').value;

                    // Validate form
                    if (!categoryName) {
                        showNotification('Please enter a category name', 'error');
                        return;
                    }

                    // Collect subcategories
                    const subcategories = Array.from(document.querySelectorAll('#subcategory-list .subcategory-input'))
                        .map(input => input.value.trim())
                        .filter(value => value !== '');

                    // Collect child categories
                    const childcategories = [];
                    document.querySelectorAll('#childcategory-list .subcategory-item').forEach(item => {
                        const name = item.querySelector('.subcategory-input').value.trim();
                        const parent = item.querySelector('.childcategory-parent').value;

                        if (name && parent) {
                            childcategories.push({ name, parent });
                        }
                    });

                    // Create category data
                    const categoryData = {
                        name: categoryName,
                        description: categoryDescription,
                        icon: categoryIcon,
                        subcategories,
                        childcategories
                    };

                    try {
                        // Send API request
                        const response = await apiCall(CATEGORY_API.create, {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(categoryData)
                        });

                        if (response.success) {
                            showNotification('Category created successfully!');
                            createCategoryModal.style.display = 'none';

                            // Reset form
                            document.getElementById('category-name').value = '';
                            document.getElementById('category-description').value = '';
                            document.getElementById('category-icon').value = '';

                            // Reload page after a short delay
                            setTimeout(() => {
                                window.location.reload();
                            }, 1000);
                        } else {
                            showNotification(response.error || 'Failed to create category', 'error');
                        }
                    } catch (error) {
                        console.error('Error creating category:', error);
                        showNotification('Error creating category', 'error');
                    }
                });
            }
        });
    </script>

