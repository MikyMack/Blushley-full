                    <!-- main-content -->
                    <div class="main-content">
                        <!-- main-content-wrap -->
                        <div class="main-content-inner">
                            <!-- main-content-wrap -->
                            <div class="main-content-wrap">
                                <div class="flex items-center flex-wrap justify-between gap20 mb-30">
                                    <h3>User Management</h3>
                                    <ul class="breadcrumbs flex items-center flex-wrap justify-start gap10">
                                        <li>
                                            <a href="/admin/dashboard">
                                                <div class="text-tiny">Dashboard</div>
                                            </a>
                                        </li>
                                        <li>
                                            <i class="icon-chevron-right"></i>
                                        </li>
                                        <li>
                                            <a href="#">
                                                <div class="text-tiny">Users</div>
                                            </a>
                                        </li>
                                        <li>
                                            <i class="icon-chevron-right"></i>
                                        </li>
                                        <li>
                                            <div class="text-tiny">User Management</div>
                                        </li>
                                    </ul>
                                </div>
                                
                                <!-- user-list -->
                                <div class="wg-box">
                                    <div class="title-box">
                                        <i class="icon-users"></i>
                                        <div class="body-text">Tip: Manage all users. You can view user details, make users staff, remove staff, or block/unblock users as needed.</div>
                                    </div>

                                    <div class="flex items-center justify-between gap10 flex-wrap">
                                        <form class="wg-filter flex-grow" method="get" id="user-filter-form" style="width:100%;">
                                            <div class="show">
                                                <div class="text-tiny">Showing</div>
                                                <div class="select">
                                                    <select id="limit-select" name="limit" onchange="this.form.submit()">
                                                        <option value="10" <% if (query && query.limit == 10) { %>selected<% } %>>10</option>
                                                        <option value="20" <% if (!query || !query.limit || query.limit == 20) { %>selected<% } %>>20</option>
                                                        <option value="30" <% if (query && query.limit == 30) { %>selected<% } %>>30</option>
                                                    </select>
                                                </div>
                                                <div class="text-tiny">entries</div>
                                            </div>
                                            <div class="form-search">
                                                <input type="text" id="search-input" name="q"
                                                    placeholder="Search by name, email, or phone..." value="<%= query && query.q ? query.q : '' %>">
                                                <button type="submit" id="search-btn"><i class="icon-search"></i></button>
                                            </div>
                                            <div class="date-filter">
                                                <div class="text-tiny">From:</div>
                                                <input type="date" id="start-date" name="start" value="<%= query && query.start ? query.start : '' %>">
                                                <div class="text-tiny">To:</div>
                                                <input type="date" id="end-date" name="end" value="<%= query && query.end ? query.end : '' %>">
                                                <button class="btn btn-secondary" id="apply-date-filter" type="submit">
                                                    <i class="icon-filter"></i> Apply
                                                </button>
                                            </div>
                                            <button class="download-btn" type="button"
                                                onclick="window.location.href='/admin/api/users/download?q=<%= encodeURIComponent(query&&query.q?query.q:'') %>&start=<%= encodeURIComponent(query&&query.start?query.start:'') %>&end=<%= encodeURIComponent(query&&query.end?query.end:'') %>';">
                                                <i class="icon-download"></i> Download List
                                            </button>
                                        </form>
                                    </div>

                                    <div class="users-container" id="users-list" style="overflow-x:auto;">
                                        <% if (users && users.length > 0) { %>
                                            <div class="users-table-responsive">
                                                <table class="table table-hover table-users" style="min-width: 900px;">
                                                    <thead>
                                                        <tr>
                                                            <th style="min-width:40px; width:4%;">#</th>
                                                            <th style="min-width:90px; width:12%;">Name</th>
                                                            <th style="min-width:220px; width:22%;">Email</th>
                                                            <th style="min-width:110px; width:14%;">Phone</th>
                                                            <th style="min-width:80px; width:10%;">Role</th>
                                                            <th style="min-width:75px; width:8%;">Verified</th>
                                                            <th style="min-width:80px; width:10%;">Wallet</th>
                                                            <th style="min-width:140px; width:16%;">Joined</th>
                                                            <th style="min-width:200px; width:14%;">Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% users.forEach(function(user, idx) { %>
                                                            <tr class="user-row">
                                                                <td><%= ((page - 1) * (query && query.limit ? parseInt(query.limit) : 20)) + idx + 1 %></td>
                                                                <td><%= user.name || '--' %></td>
                                                                <td style="word-break: break-all;"><%= user.email || '--' %></td>
                                                                <td><%= user.phone %></td>
                                                                <td><span class="tag tag-small"><%= user.role %></span></td>
                                                                <td>
                                                                    <% if (user.isVerified) { %>
                                                                        <span class="text-success">Yes</span>
                                                                    <% } else { %>
                                                                        <span class="text-danger">No</span>
                                                                    <% } %>
                                                                </td>
                                                                <td><span class="tag"><%= user.wallet && typeof user.wallet.balance !== 'undefined' ? user.wallet.balance : 0 %>â‚¹</span></td>
                                                                <td>
                                                                    <% if (user.createdAt) { %>
                                                                        <%= new Date(user.createdAt).toLocaleString() %>
                                                                    <% } else { %>
                                                                        --
                                                                    <% } %>
                                                                </td>
                                                                <td>
                                                                    <button class="btn btn-xs btn-light view-user" data-id="<%= user._id %>" title="View"><i class="icon-eye"></i></button>
                                                                    <button class="btn btn-xs btn-light more-actions" data-id="<%= user._id %>" title="More"><i class="icon-more-vertical"></i></button>
                                                                    <% if (user.role !== 'admin' && user.role !== 'superadmin') { %>
                                                                        <% if (user.role !== 'staff') { %>
                                                                            <button 
                                                                                class="btn btn-xs btn-primary make-staff"
                                                                                data-id="<%= user._id %>"
                                                                                title="Promote to Staff"
                                                                                style="margin-left:5px;"
                                                                                type="button"
                                                                                onclick="makeUserStaff('<%= user._id %>', this)"
                                                                            >
                                                                                <i class="icon-user-plus"></i> Staff
                                                                            </button>
                                                                        <% } else { %>
                                                                            <span class="tag tag-info" style="margin-left:5px;">Staff</span>
                                                                            <button
                                                                                class="btn btn-xs btn-danger remove-staff"
                                                                                data-id="<%= user._id %>"
                                                                                title="Remove Staff"
                                                                                style="margin-left:5px;"
                                                                                type="button"
                                                                                onclick="removeStaffRole('<%= user._id %>', this)"
                                                                            >
                                                                                <i class="icon-user-x"></i>
                                                                            </button>
                                                                        <% } %>
                                                                        <% if (!user.isBlocked) { %>
                                                                            <button
                                                                                class="btn btn-xs btn-warning block-user"
                                                                                data-id="<%= user._id %>"
                                                                                title="Block"
                                                                                style="margin-left:5px;"
                                                                                type="button"
                                                                                onclick="blockUser('<%= user._id %>', this)"
                                                                            >
                                                                                <i class="icon-user-slash"></i> Block
                                                                            </button>
                                                                        <% } else { %>
                                                                            <button
                                                                                class="btn btn-xs btn-success unblock-user"
                                                                                data-id="<%= user._id %>"
                                                                                title="Unblock"
                                                                                style="margin-left:5px;"
                                                                                type="button"
                                                                                onclick="unblockUser('<%= user._id %>', this)"
                                                                            >
                                                                                <i class="icon-user-check"></i> Unblock
                                                                            </button>
                                                                        <% } %>
                                                                    <% } %>
                                                                </td>
                                                            </tr>
                                                        <% }); %>
                                                    </tbody>
                                                </table>
                                            </div>
                                        <% } else { %>
                                            <div class="centered" style="padding:40px 0; text-align:center;">No users found for your criteria.</div>
                                        <% } %>
                                    </div>

                                    <div class="divider"></div>
                                    <div class="flex items-center justify-between flex-wrap gap10">
                                        <div class="text-tiny" id="showing-entries">
                                            <% if (users && users.length > 0) { %>
                                                Showing <%= ((page - 1) * (query && query.limit ? parseInt(query.limit) : 20)) + 1 %> to <%= ((page - 1) * (query && query.limit ? parseInt(query.limit) : 20)) + users.length %> of <%= total %> entries
                                            <% } else { %>
                                                Showing 0 entries
                                            <% } %>
                                        </div>
                                        <ul class="wg-pagination" id="pagination">
                                            <% if (totalPages && totalPages > 1) { 
                                                function listPages (page, totalPages) {
                                                    let arr = [];
                                                    for (let i = 1; i <= totalPages; i++) {
                                                        if (
                                                            i === 1 ||
                                                            i === totalPages ||
                                                            (i >= page - 2 && i <= page + 2)
                                                        ) arr.push(i);
                                                        else if (arr.length && arr[arr.length-1] !== null) arr.push(null);
                                                    }
                                                    return arr;
                                                }
                                                const pages = listPages(page, totalPages);
                                                if (page > 1) { %>
                                                    <li><a href="?<%= Object.entries({...query, page: page - 1}).map(([k,v])=> `${encodeURIComponent(k)}=${encodeURIComponent(v)}`).join('&') %>">&lt;</a></li>
                                                <% }
                                                pages.forEach(function(p){
                                                    if (p === null) { %>
                                                        <li><span>...</span></li>
                                                    <% } else if (p === page) { %>
                                                        <li class="active"><span><%= p %></span></li>
                                                    <% } else { %>
                                                        <li><a href="?<%= Object.entries({...query, page: p}).map(([k,v])=> `${encodeURIComponent(k)}=${encodeURIComponent(v)}`).join('&') %>"><%= p %></a></li>
                                                    <% }
                                                });
                                                if (page < totalPages) { %>
                                                    <li><a href="?<%= Object.entries({...query, page: page + 1}).map(([k,v])=> `${encodeURIComponent(k)}=${encodeURIComponent(v)}`).join('&') %>">&gt;</a></li>
                                            <% } 
                                            } %>
                                        </ul>
                                    </div>
                                </div>
                                <style>
                                    .users-table-responsive {
                                        width: 100%;
                                        overflow-x: auto;
                                    }
                                    .table-users thead th,
                                    .table-users tbody td {
                                        vertical-align: middle;
                                        white-space: normal;
                                        word-break: break-word;
                                    }
                                    .table-users th,
                                    .table-users td {
                                        padding: 10px 8px;
                                        font-size: 14px;
                                    }
                                    @media (max-width: 1200px) {
                                        .table-users th,
                                        .table-users td {
                                            font-size: 13px;
                                            padding: 8px 4px;
                                        }
                                    }
                                    @media (max-width: 960px) {
                                        .users-table-responsive {
                                            min-width: 0;
                                            max-width: 100vw;
                                        }
                                        .table-users {
                                            min-width: 700px;
                                        }
                                    }
                                    @media (max-width: 700px) {
                                        .users-table-responsive,
                                        .users-container {
                                            padding: 0;
                                        }
                                        .table-users {
                                            min-width: 500px;
                                        }
                                    }
                                    @media (max-width: 600px) {
                                        .table-users thead {
                                            display: none;
                                        }
                                        .table-users, .table-users tbody, .table-users tr, .table-users td {
                                            display: block;
                                            width: 100%;
