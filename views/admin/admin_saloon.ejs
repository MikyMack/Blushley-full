                                        document.getElementById(modalId).style.display = 'none';
                                    }

                                    // File upload: preserve
                                    function salonFileUploadInit() {
                                        const area = document.getElementById('salon-file-upload-area');
                                        const fileInput = document.getElementById('salon-images');
                                        const previewGrid = document.getElementById('salon-image-preview-grid');
                                        area.addEventListener('click', function (e) {
                                            if (e.target === area || e.target.classList.contains('salon-upload-content') || e.target.classList.contains('icon-upload')) {
                                                fileInput.click();
                                            }
                                        });
                                        area.addEventListener('dragover', function (e) {
                                            e.preventDefault();
                                            area.classList.add('drag-over');
                                        });
                                        area.addEventListener('dragleave', function (e) {
                                            e.preventDefault();
                                            area.classList.remove('drag-over');
                                        });
                                        area.addEventListener('drop', function (e) {
                                            e.preventDefault();
                                            area.classList.remove('drag-over');
                                            if (e.dataTransfer.files && e.dataTransfer.files.length > 0) {
                                                fileInput.files = e.dataTransfer.files;
                                                showFilePreviews(e.dataTransfer.files, previewGrid);
                                            }
                                        });
                                        fileInput.addEventListener('change', function (e) {
                                            showFilePreviews(e.target.files, previewGrid);
                                        });
                                        document.getElementById('add-salon-btn').addEventListener('click', function () {
                                            fileInput.value = "";
                                            previewGrid.innerHTML = "";
                                        });
                                    }
                                    function showFilePreviews(files, previewGrid) {
                                        previewGrid.innerHTML = '';
                                        Array.from(files).forEach((file, idx) => {
                                            const reader = new FileReader();
                                            reader.onload = function (e) {
                                                const preview = document.createElement('div');
                                                preview.className = 'salon-image-preview';
                                                preview.innerHTML = `
                                                    <img src="${e.target.result}" alt="Preview">
                                                    <button type="button" class="salon-remove-preview" data-index="${idx}" tabindex="0"><i class="icon-x"></i></button>
                                                `;
                                                preview.querySelector('button').addEventListener('click', function () {
                                                    removeImageFromFileInput(idx, previewGrid);
                                                });
                                                previewGrid.appendChild(preview);
                                            };
                                            reader.readAsDataURL(file);
                                        });
                                    }
                                    function removeImageFromFileInput(removeIdx, previewGrid) {
                                        const input = document.getElementById('salon-images');
                                        const dt = new DataTransfer();
                                        const files = Array.from(input.files).filter((file, idx) => idx !== removeIdx);
                                        files.forEach(f => dt.items.add(f));
                                        input.files = dt.files;
                                        showFilePreviews(dt.files, previewGrid);
                                    }

                                    // Form handling (image file - unchanged)
                                    async function handleAddSalon(event) {
                                        event.preventDefault();
                                        try {
                                            const form = event.target;
                                            const formData = new FormData(form);
                                            const salonData = {
                                                name: formData.get('name'),
                                                salonType: formData.get('salonType'),
                                                ownerName: formData.get('ownerName'),
                                                email: formData.get('email'),
                                                phone: formData.get('phone'),
                                                status: formData.get('status'),
                                                username: formData.get('username'),
                                                password: formData.get('password'),
                                                address: {
                                                    line1: formData.get('address[line1]'),
                                                    city: formData.get('address[city]'),
                                                    state: formData.get('address[state]'),
                                                    pincode: formData.get('address[pincode]'),
                                                    country: formData.get('address[country]')
                                                },
                                                googleMapLink: formData.get('googleMapLink'),
                                                description: formData.get('description'),
                                                slotDurationMinutes: parseInt(formData.get('slotDurationMinutes')),
                                                services: getServicesData(),
                                                staff: getStaffData(),
                                                availability: getAvailabilityData(),
                                                closedDates: getClosedDates()
                                            };

                                            const finalFormData = new FormData();
                                            finalFormData.append('data', JSON.stringify(salonData));
                                            const imageFiles = document.getElementById('salon-images').files;
                                            for (let i = 0; i < imageFiles.length; i++) {
                                                finalFormData.append('images', imageFiles[i]);
                                            }
                                            const response = await fetch('/salon/create', {
                                                method: 'POST',
                                                body: finalFormData,
                                                headers: {
                                                    'X-Requested-With': 'XMLHttpRequest'
                                                }
                                            });
                                            if (response.ok) {
                                                showNotification('Salon created successfully!', 'success');
                                                closeSalonModal('add-salon-modal');
                                                loadSalons();
                                                form.reset();
                                                document.getElementById('salon-image-preview-grid').innerHTML = '';
                                                document.getElementById('salon-images').value = '';
                                            } else {
                                                throw new Error('Failed to create salon');
                                            }
                                        } catch (error) {
                                            console.error('Error creating salon:', error);
                                            showNotification('Failed to create salon', 'error');
                                        }
                                    }

