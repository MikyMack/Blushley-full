                                    // Filter functions remain unchanged
                                    function applyFilters() {
                                        currentFilters = {
                                            search: document.getElementById('salon-search-input').value.trim(),
                                            status: document.getElementById('status-filter').value,
                                            salonType: document.getElementById('salon-type-filter').value,
                                            city: document.getElementById('city-filter').value.trim()
                                        };
                                        Object.keys(currentFilters).forEach(key => {
                                            if (!currentFilters[key]) delete currentFilters[key];
                                        });
                                        loadSalons(1);
                                    }

                                    function resetFilters() {
                                        document.getElementById('salon-search-input').value = '';
                                        document.getElementById('status-filter').value = '';
                                        document.getElementById('salon-type-filter').value = '';
                                        document.getElementById('city-filter').value = '';

                                        currentFilters = {};
                                        loadSalons(1);
                                    }

                                    function updateFilters() {
                                        document.getElementById('status-filter').value = currentFilters.status || '';
                                        document.getElementById('salon-type-filter').value = currentFilters.salonType || '';
                                        document.getElementById('city-filter').value = currentFilters.city || '';
                                    }

                                    // Pagination
                                    function updatePagination(data) {
                                        let totalPages = data.totalPages;
                                        let total = data.total || 0;
                                        let pageSize = data.limit || data.pageSize || 10;
                                        if (!totalPages && pageSize) {
                                            totalPages = Math.ceil(total / pageSize);
                                        }
                                        const rangeStart = total === 0 ? 0 : (currentPage - 1) * pageSize + 1;
                                        const rangeEnd = Math.min(currentPage * pageSize, total);
                                        document.getElementById('current-range').textContent = `${rangeStart}-${rangeEnd}`;
                                        document.getElementById('total-salons').textContent = total;
                                        document.getElementById('prev-page').disabled = currentPage === 1 || total === 0;
                                        document.getElementById('next-page').disabled = (totalPages === 0 || currentPage === totalPages);
                                        const numbersContainer = document.getElementById('pagination-numbers');
                                        numbersContainer.innerHTML = '';
                                        for (let i = 1; i <= (totalPages || 1); i++) {
                                            const button = document.createElement('button');
                                            button.className = `salon-pagination-number ${i === currentPage ? 'active' : ''}`;
                                            button.textContent = i;
                                            button.onclick = () => loadSalons(i);
                                            numbersContainer.appendChild(button);
                                        }
                                    }
                                    function goToPrevPage() {
                                        if (currentPage > 1) loadSalons(currentPage - 1);
                                    }
                                    function goToNextPage() {
                                        const pageSize = 10;
                                        let total = salonsData.length;
                                        if (typeof window.lastPaginationData === "object") {
                                            total = window.lastPaginationData.total || salonsData.length;
                                        }
                                        let totalPages = Math.ceil(total / pageSize);
                                        if (currentPage < totalPages) {
                                            loadSalons(currentPage + 1);
                                        }
                                    }

                                    // Add/close Modal
                                    function openAddSalonModal() {
                                        document.getElementById('add-salon-modal').style.display = 'block';
