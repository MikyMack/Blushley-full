                                            }
                                            // Availability
                                            let availHtml = "Not set";
                                            if (Array.isArray(salon.availability) && salon.availability.length > 0) {
                                                availHtml = salon.availability.map(day =>
                                                    `<span class="salon-availability-daycard">
                                                        <b>${["Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"][day.dayOfWeek || 0]}</b>: 
                                                        ${day.isOpen ? (day.openingTime + "-" + day.closingTime) : "Closed"}
                                                    </span>`
                                                ).join('<span class="avail-divider">, </span>');
                                            }
                                            // Closed dates
                                            let closedDatesHtml = "";
                                            if (Array.isArray(salon.closedDates) && salon.closedDates.length > 0) {
                                                closedDatesHtml =
                                                    salon.closedDates.map(d => {
                                                        const dt = typeof d === "string" ? d.slice(0, 10) : "";
                                                        return dt ? `<span class="salon-closed-date"> ${dt}</span>` : "";
                                                    }).join('');
                                            }
                                            // Images grid
                                            let imagesGrid = '';
                                            if (Array.isArray(salon.images) && salon.images.length > 0) {
                                                imagesGrid = salon.images.map(url =>
                                                    `<img class="salon-card-thumb" src="${url}" alt="${salon.name} photo"/>`
                                                ).join("");
