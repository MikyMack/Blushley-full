                                                    </button>
                                                    <button class="salon-action-btn salon-btn-secondary" onclick="updateSalonStatus('${salon._id}', '${salon.name.replace(/'/g, "\\'").replace(/"/g, "") || ""}')">
                                                        <i class="icon-edit-2"></i> Status
                                                    </button>
                                                    <button class="salon-action-btn salon-btn-danger" onclick="deleteSalon('${salon._id}', '${salon.name.replace(/'/g, "\\'").replace(/"/g, "") || ""}')">
