                                            const data = await response.json();

                                            salonsData = data.saloons || data.salons || [];
                                            currentPage = data.page || 1;

                                            let salonsArr = data.saloons || data.salons || [];
                                            renderSalons(Array.isArray(salonsArr) ? salonsArr : []);
                                            updatePagination(data);
                                            updateFilters();
                                        } catch (error) {
                                            console.error('Error loading salons:', error);
                                            showNotification('Failed to load salons', 'error');
                                        }
                                    }

                                    // --- Enhanced Card Rendering With All Details ---
                                    function renderSalons(salons) {
                                        const container = document.getElementById('salons-list');
                                        salons = Array.isArray(salons) ? salons : [];
                                        if (!salons || salons.length === 0) {
                                            container.innerHTML = `
                                                <div class="salon-empty-state">
                                                    <i class="icon-scissors"></i>
                                                    <h4>No Salons Found</h4>
                                                    <p>No salons match your current filters.</p>
                                                    <button class="salon-btn salon-btn-primary" onclick="resetFilters()">
