        .salon-management-container {
            padding: 20px;
        }

        .salon-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 15px;
        }

        .salon-header h3 {
            margin: 0;
            color: #333;
            font-weight: 600;
        }

        .salon-controls {
            display: flex;
            gap: 15px;
            align-items: center;
            flex-wrap: wrap;
        }

        .salon-search {
            position: relative;
            min-width: 250px;
        }

        .salon-search input {
            width: 100%;
            padding: 10px 15px 10px 40px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s;
        }

        .salon-search input:focus {
            outline: none;
            border-color: #5c4d3b;
            box-shadow: 0 0 0 2px rgba(102, 126, 234, 0.1);
        }

        .salon-search i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #888;
        }

        .salon-add-btn {
            background: linear-gradient(135deg, #5c4d3b 0%, #5c4d3b 100%);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s;
        }

        .salon-add-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

        .salon-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }

        .salon-card {
            background: white;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            border: 1px solid #eee;
        }

        .salon-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
        }

        .salon-image {
            height: 180px;
            width: 100%;
            overflow: hidden;
        }

        .salon-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s;
        }

        .salon-card:hover .salon-image img {
            transform: scale(1.05);
        }

        .salon-content {
            padding: 20px;
        }

        .salon-name {
            font-size: 18px;
            font-weight: 600;
            margin: 0 0 10px 0;
            color: #333;
            line-height: 1.3;
        }

        .salon-location {
            display: flex;
            align-items: center;
            gap: 8px;
            color: #666;
            font-size: 14px;
            margin-bottom: 10px;
        }

        .salon-services {
            display: flex;
            flex-wrap: wrap;
            gap: 5px;
            margin-bottom: 15px;
        }

        .service-tag {
            background: #f0f4ff;
            color: #5c4d3b;
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 500;
        }

        .salon-status {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #eee;
        }

        .status-badge {
            padding: 5px 10px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
        }

        .status-active {
            background: #e6f7ee;
            color: #10b759;
        }

        .status-inactive {
            background: #ffebeb;
            color: #ff4d4f;
        }

        .salon-actions {
            display: flex;
            gap: 10px;
        }

        .action-btn {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s;
            border: none;
        }

        .edit-btn {
            background: #e6f3ff;
            color: #5c4d3b;
        }

        .edit-btn:hover {
            background: #5c4d3b;
            color: white;
        }

        .toggle-btn {
            background: #f0f0f0;
            color: #666;
        }

        .toggle-btn:hover {
            background: #e0e0e0;
        }

        .toggle-btn.active {
            background: #e6f7ee;
            color: #10b759;
        }

        .delete-btn {
            background: #ffebee;
            color: #f44336;
        }

        .delete-btn:hover {
            background: #f44336;
            color: white;
        }

        /* Salon Modal Styles */
        .salon-modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(5px);
            animation: fadeIn 0.3s ease;
        }

        .salon-modal-content {
            background-color: #fff;
            margin: 2% auto;
            border-radius: 16px;
            width: 90%;
            max-width: 800px;
            max-height: 90vh;
            overflow-y: auto;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            animation: slideIn 0.3s ease;
        }

        .salon-modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 24px 32px;
            border-bottom: 1px solid #e5e7eb;
            background: linear-gradient(135deg, #5c4d3b 0%, #5c4d3b 100%);
            border-radius: 16px 16px 0 0;
            color: white;
        }

        .salon-modal-title {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .salon-modal-title i {
            font-size: 24px;
            color: #fff;
        }

        .salon-modal-title h3 {
            margin: 0;
            font-size: 24px;
            font-weight: 600;
            color: white;
        }

        .salon-close-btn {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            color: white;
        }

        .salon-close-btn:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: scale(1.1);
        }

        .salon-modal-body {
            padding: 32px;
        }

        .salon-form-section {
            margin-bottom: 32px;
            background: #f8fafc;
            border-radius: 12px;
            padding: 24px;
            border: 1px solid #e2e8f0;
        }

        .salon-section-header {
            margin-bottom: 20px;
            padding-bottom: 12px;
            border-bottom: 2px solid #e2e8f0;
        }

        .salon-section-header h4 {
            margin: 0;
            font-size: 18px;
            font-weight: 600;
            color: #1e293b;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .salon-section-header i {
            color: #667eea;
            font-size: 20px;
        }

        .salon-form-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }

        .salon-form-group {
            margin-bottom: 20px;
        }

        .salon-form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #374151;
            font-size: 14px;
        }

        .salon-form-group input,
        .salon-form-group select,
        .salon-form-group textarea {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 14px;
            transition: all 0.3s ease;
            background: white;
        }

        .salon-form-group input:focus,
        .salon-form-group select:focus,
        .salon-form-group textarea:focus {
            outline: none;
            border-color: #5c4d3b;
            box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        }

        .salon-services-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
        }

        .salon-service-item {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 12px;
            background: white;
            border-radius: 8px;
            border: 2px solid #e2e8f0;
            transition: all 0.3s ease;
        }

        .salon-service-item:hover {
            border-color: #5c4d3b;
            background: #f8fafc;
        }

        .salon-service-item input[type="checkbox"] {
            width: 18px;
            height: 18px;
            margin: 0;
        }

        .salon-service-item label {
            margin: 0;
            cursor: pointer;
            font-weight: 500;
            color: #374151;
        }

        .salon-file-upload-area {
            border: 2px dashed #cbd5e1;
            border-radius: 12px;
            padding: 40px 20px;
            text-align: center;
            background: #f8fafc;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
        }

        .salon-file-upload-area:hover {
            border-color: #5c4d3b;
            background: #f1f5f9;
        }

        .salon-file-upload-area input[type="file"] {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            cursor: pointer;
        }

        .salon-upload-content i {
            font-size: 48px;
            color: #94a3b8;
            margin-bottom: 16px;
        }

        .salon-upload-content p {
            margin: 0 0 8px 0;
            font-weight: 600;
            color: #374151;
        }

        .salon-upload-content small {
            color: #64748b;
        }

        .salon-image-preview-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
            gap: 12px;
            margin-top: 16px;
        }

        .salon-image-preview-grid img {
            width: 100%;
            height: 120px;
            object-fit: cover;
            border-radius: 8px;
            border: 2px solid #e2e8f0;
        }

        .salon-status-toggle {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .salon-toggle-label {
            display: flex;
            align-items: center;
            gap: 8px;
            cursor: pointer;
        }

        .salon-toggle-slider {
            position: relative;
            width: 50px;
            height: 24px;
            background: #cbd5e1;
            border-radius: 12px;
            transition: all 0.3s ease;
        }

        .salon-toggle-slider::before {
            content: '';
            position: absolute;
            top: 2px;
            left: 2px;
            width: 20px;
            height: 20px;
            background: white;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

        input[type="checkbox"]:checked+.salon-toggle-label .salon-toggle-slider {
            background: #10b981;
        }

        input[type="checkbox"]:checked+.salon-toggle-label .salon-toggle-slider::before {
            transform: translateX(26px);
        }

        .salon-form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 16px;
            padding-top: 24px;
            border-top: 1px solid #e2e8f0;
            margin-top: 32px;
        }

        .salon-btn {
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            border: none;
        }

        .salon-btn-secondary {
            background: #f1f5f9;
            color: #64748b;
            border: 2px solid #e2e8f0;
        }

        .salon-btn-secondary:hover {
            background: #e2e8f0;
            color: #475569;
        }

        .salon-btn-primary {
            background: linear-gradient(135deg, #5c4d3b 0%, #5c4d3b 100%);
            color: white;
        }

        .salon-btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @keyframes slideIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .salon-modal-content {
                width: 95%;
                margin: 5% auto;
                max-height: 95vh;
            }

            .salon-modal-header {
                padding: 20px;
            }

            .salon-modal-body {
                padding: 20px;
            }

            .salon-form-grid {
                grid-template-columns: 1fr;
            }

            .salon-services-grid {
                grid-template-columns: 1fr;
            }

            .salon-form-actions {
                flex-direction: column;
            }

            .salon-btn {
                width: 100%;
                justify-content: center;
            }

            .salon-header {
                flex-direction: column;
                align-items: flex-start;
            }

            .salon-controls {
                width: 100%;
            }

            .salon-search {
                min-width: 100%;
            }
        }

        @media (max-width: 480px) {
            .salon-modal-content {
                width: 100%;
                margin: 0;
                border-radius: 0;
                max-height: 100vh;
            }

            .salon-modal-header {
                border-radius: 0;
            }

            .salon-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Empty state */
        .salon-empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .salon-empty-state i {
            font-size: 64px;
            color: #ddd;
            margin-bottom: 20px;
        }

        .salon-empty-state h4 {
            margin: 0 0 10px 0;
            color: #888;
        }

        .salon-empty-state p {
            margin: 0;
            color: #aaa;
        }
    </style>
</head>

