                                                        ${[address.line1, address.city, address.state, address.pincode, address.country].filter(x => x).join(', ') || "N/A"}
                                                        ${googleMapHtml}
                                                    </div>
                                                    <div class="salon-card-field-split">
                                                        <div><b>Created:</b> ${salon.createdAt ? new Date(salon.createdAt).toLocaleString() : ''}</div>
                                                        <div><b>Updated:</b> ${salon.updatedAt ? new Date(salon.updatedAt).toLocaleString() : ''}</div>
                                                    </div>
                                                    <div class="salon-card-description">
                                                        ${(salon.description || "").substring(0, 180)}${(salon.description && salon.description.length > 180) ? "..." : ""}
