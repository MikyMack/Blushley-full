                                <script>
                                    // Get resellers from locals (injected server-side in EJS)
                                    window.pageResellers = <%- JSON.stringify(resellers || []) %>;
                                    window.currentPage = 1;
                                    window.limit = 10;
                                    window.filtered = window.pageResellers.slice();

                                    // Search & filter logic
                                    window.filterResellers = function() {
                                        let search = document.getElementById('search-input').value.trim().toLowerCase();
                                        window.filtered = window.pageResellers.filter(function(rs) {
                                            return (!search
                                                || (rs.companyName || '').toLowerCase().includes(search)
                                                || (rs.gstNo || '').toLowerCase().includes(search)
                                                || (rs.contactName || '').toLowerCase().includes(search)
                                                || (rs.email || '').toLowerCase().includes(search)
                                                || (rs.phone || '').toLowerCase().includes(search)
                                            );
                                        });
                                        window.renderList();
                                    };

                                    window.renderList = function() {
                                        const container = document.getElementById('resellers-list');
                                        container.innerHTML = '';
                                        const lmt = parseInt(window.limit, 10);
                                        const startIndex = (window.currentPage - 1) * lmt;
                                        const endIndex = startIndex + lmt;
                                        const pageData = window.filtered.slice(startIndex, endIndex);

                                        if (!pageData.length) {
                                            container.innerHTML = '<div class="no-products">No resellers found.</div>';
                                        }
                                        // Could render pageData items here...
                                    };

                                    document.addEventListener('DOMContentLoaded', function () {
                                        // By default, use backend-rendered HTML (above), but enable page size/search controls
                                        document.getElementById('limit-select').addEventListener('change', function () {
                                            window.limit = parseInt(this.value, 10);
                                            window.currentPage = 1;
                                            window.filterResellers();
                                        });

                                        document.getElementById('search-btn').addEventListener('click', function () {
                                            window.filterResellers();
                                        });
                                    });

                                    // Modal for status update
                                    window.showStatusModal = function(resellerId) {
                                        const reseller = (window.pageResellers || []).find(r => r._id === resellerId);
                                        const modalBody = document.getElementById('reseller-action-body');
                                        document.getElementById('reseller-action-modal-title').innerText = "Update Reseller Status";
                                        if (!reseller) return;

                                        var rejectionReasonPrefill = reseller.rejectionReason ? reseller.rejectionReason.replace(/"/g, '&quot;') : '';

                                        let statusOptions = [
                                            { value: "pending", label: "Pending" },
                                            { value: "approved", label: "Approved" },
                                            { value: "rejected", label: "Rejected" },
                                            { value: "disabled", label: "Disabled" }
                                        ];
                                        let optionsHtml = statusOptions.map(function(opt) { 
                                            return '<option value="' + opt.value + '"' + (reseller.status === opt.value ? ' selected' : '') + '>' + opt.label + '</option>';
                                        }).join("");
                                        // Show rejection reason field only if rejected is chosen (toggle by JS)
                                        modalBody.innerHTML = `
                                            <form id="update-reseller-status-form" onsubmit="event.preventDefault(); window.updateResellerStatus('${resellerId}')">
                                                <p>
                                                    <b>${reseller.companyName}</b> (<span style="font-size:12px">${reseller.email}</span>)
                                                </p>
                                                <div class="form-group">
                                                    <label for="reseller-status-select">Change status:</label>
                                                    <select id="reseller-status-select" name="status" class="form-control" style="width: 220px; display:inline-block" onchange="window.toggleRejectionReason()">
                                                        ${optionsHtml}
                                                    </select>
                                                </div>
                                                <div id="rejection-reason-group" style="margin-top:10px; display:${reseller.status==='rejected'?'block':'none'}">
                                                    <label for="rejection-reason-input">Rejection Reason:</label>
                                                    <textarea id="rejection-reason-input" class="form-control" name="rejectionReason" rows="2" style="width:100%">${rejectionReasonPrefill}</textarea>
                                                </div>
                                                <div class="form-actions" style="margin-top:18px;">
                                                    <button type="button" class="btn btn-secondary" onclick="window.closeModal('reseller-action-modal')">Cancel</button>
                                                    <button type="submit" class="btn btn-primary">Update Status</button>
                                                </div>
                                            </form>
                                        `;
                                        // Setup reason toggling and prefill outside of the quoted template string!
                                        setTimeout(function() {
                                            var selectElem = document.getElementById('reseller-status-select');
                                            if (selectElem) {
                                                selectElem.addEventListener('change', window.toggleRejectionReason);
                                            }
                                        }, 20);
                                        document.getElementById('reseller-action-modal').style.display = 'block';
                                    };

                                    window.toggleRejectionReason = function() {
                                        var statusVal = document.getElementById('reseller-status-select').value;
                                        document.getElementById('rejection-reason-group').style.display = (statusVal === 'rejected') ? 'block' : 'none';
                                    };

                                    window.closeModal = function(id) {
                                        document.getElementById(id).style.display = "none";
                                    };

                                    // Submit PATCH request to update status
                                    window.updateResellerStatus = async function(resellerId) {

                                        try {

                                            const status = document.getElementById('reseller-status-select').value;

                                            let body = { status };

                                            

                                            if (status === 'rejected') {

                                                const rejectionReason = document.getElementById('rejection-reason-input').value.trim();

                                                if (!rejectionReason) {

                                                    alert('Please enter a rejection reason.');

                                                    document.getElementById('rejection-reason-input').focus();

                                                    return;

                                                }

                                                body.rejectionReason = rejectionReason;

                                            }



                                            console.log('Sending update:', { resellerId, body });



                                            const res = await fetch('/reseller/approve/' + resellerId, {

                                                method: 'PATCH',

                                                headers: { 'Content-Type': 'application/json' },

                                                credentials: 'include',

                                                body: JSON.stringify(body)

                                            });

                                            

                                            const data = await res.json();

                                            console.log('Server response:', data);

                                            

                                            if (res.ok && data.success) {

                                                alert(data.message || 'Status updated successfully!');

                                                window.location.reload();

                                            } else {

                                                alert(data.error || data.message || 'Status update failed');

                                            }

                                        } catch (e) {

                                            console.error('Update error:', e);

                                            alert('Error updating status: ' + e.message);

                                        }

                                    };

                                    // These functions are DEPRECATED (but left in case old buttons call them)
                                    window.showApproveModal = function(resellerId) {
                                        window.showStatusModal(resellerId);
                                    };
                                    window.showRejectModal = function(resellerId) {
                                        window.showStatusModal(resellerId);
                                    };
                                    window.showDisableModal = function(resellerId) {
                                        window.showStatusModal(resellerId);
                                    };
                                </script>
