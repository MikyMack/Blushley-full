                window.location.reload();
            } else {
                throw new Error(result.error || 'Confirmation failed');
            }
        } catch (error) {
            alert('Failed to confirm appointment: ' + error.message);
        }
    }

    function toggleDayAvailability(dayIndex, isAvailable) {
        const slotsContainer = document.getElementById(`slots-${dayIndex}`);
        if (slotsContainer) {
            if (isAvailable) {
                slotsContainer.style.display = 'block';
                if (slotsContainer.querySelectorAll('.time-slot').length === 0) {
                    addSlot(dayIndex);
                }
            } else {
                slotsContainer.style.display = 'none';
                currentAvailability = currentAvailability.filter(a => a.dayOfWeek !== dayIndex);
            }
        }
    }

    function addSlot(dayIndex) {
        const slotsContainer = document.getElementById(`slots-${dayIndex}`);
        if (!slotsContainer) return;
        const slotIndex = slotsContainer.querySelectorAll('.time-slot').length;
        const slotHtml = `
            <div class="time-slot">
                <input type="time" value="09:00" onchange="updateSlot(${dayIndex}, ${slotIndex}, 'start', this.value)">
                <span>to</span>
                <input type="time" value="17:00" onchange="updateSlot(${dayIndex}, ${slotIndex}, 'end', this.value)">
                <button type="button" class="remove-slot-btn" onclick="removeSlot(${dayIndex}, ${slotIndex})">×</button>
            </div>
        `;
        slotsContainer.insertAdjacentHTML('beforeend', slotHtml);
        let dayAvailability = currentAvailability.find(a => a.dayOfWeek === dayIndex);
        if (!dayAvailability) {
            dayAvailability = { dayOfWeek: dayIndex, slots: [] };
            currentAvailability.push(dayAvailability);
        }
        dayAvailability.slots.push({ start: "09:00", end: "17:00" });
    }

    function removeSlot(dayIndex, slotIndex) {
        const slotsContainer = document.getElementById(`slots-${dayIndex}`);
        if (!slotsContainer) return;
        const slots = slotsContainer.querySelectorAll('.time-slot');
        if (slots.length > 1) {
            slots[slotIndex].remove();
            const dayAvailability = currentAvailability.find(a => a.dayOfWeek === dayIndex);
            if (dayAvailability) {
                dayAvailability.slots.splice(slotIndex, 1);
                if (dayAvailability.slots.length === 0) {
                    currentAvailability = currentAvailability.filter(a => a.dayOfWeek !== dayIndex);
                }
            }
        }
    }

    function updateSlot(dayIndex, slotIndex, type, value) {
        const dayAvailability = currentAvailability.find(a => a.dayOfWeek === dayIndex);
        if (dayAvailability && dayAvailability.slots[slotIndex]) {
            dayAvailability.slots[slotIndex][type] = value;
        }
    }
