    <script>
    let freelancerData = null;
    let isProfileEditMode = false;
    let isAvailabilityEditMode = false;
    let currentAvailability = [];

    function safeQuerySelector(selector) {
        const element = document.querySelector(selector);
        return element;
    }

    function safeAddEventListener(selector, event, handler) {
        const element = safeQuerySelector(selector);
        if (element) {
            element.addEventListener(event, handler);
        }
    }

    document.addEventListener('DOMContentLoaded', function() {
        initializeDashboard();
        setupEventListeners();
        setupNavigation();
        loadInitialData();
    });

    function loadInitialData() {
        try {
            freelancerData = {
                freelancer: {
                    _id: '<%= freelancer._id || "" %>',
                    fullName: '<%= freelancer.fullName || "" %>',
                    professionalTitle: '<%= freelancer.professionalTitle || "" %>',
                    email: '<%= freelancer.email || "" %>',
                    phone: '<%= freelancer.phone || "" %>',
                    bio: '<%= freelancer.bio || "" %>',
                    experience: <%= freelancer.experience || 0 %>,
                    skills: <%- JSON.stringify(freelancer.skills || []) %>,
                    rating: <%= freelancer.rating || 0 %>,
                    totalReviews: <%= freelancer.totalReviews || 0 %>,
                    locations: <%- JSON.stringify(freelancer.locations || []) %>,
                    availability: <%- JSON.stringify(freelancer.availability || []) %>,
                    freelancerServices: <%- JSON.stringify(freelancer.freelancerServices || []) %>,
                    profileImage: '<%= freelancer.profileImage || "" %>',
                    portfolioImages: <%- JSON.stringify(freelancer.portfolioImages || []) %>,
                    createdAt: '<%= freelancer.createdAt || "" %>'
                }
            };
            currentAvailability = freelancerData.freelancer.availability || [];
            if (document.getElementById('profile-page').classList.contains('active')) {
                loadProfileInfo();
                loadAvailability();
                loadServices();
                loadLocations();
                loadProfilePreview();
            }
        } catch (error) {}
    }

    function initializeDashboard() {
    }

    function setupEventListeners() {
        safeAddEventListener('#edit-profile-btn', 'click', enterProfileEditMode);
        safeAddEventListener('#save-profile-btn', 'click', saveProfile);
        safeAddEventListener('#cancel-profile-btn', 'click', exitProfileEditMode);

        safeAddEventListener('#edit-availability-btn', 'click', enterAvailabilityEditMode);
        safeAddEventListener('#save-availability-btn', 'click', saveAvailability);
        safeAddEventListener('#cancel-availability-btn', 'click', exitAvailabilityEditMode);

        safeAddEventListener('#add-service-btn', 'click', showAddServiceModal);
        safeAddEventListener('#add-service-form', 'submit', handleAddService);

        safeAddEventListener('#add-location-btn', 'click', showAddLocationModal);
        safeAddEventListener('#add-location-form', 'submit', handleAddLocation);

        safeAddEventListener('#edit-profile-link', 'click', function(e) {
            e.preventDefault();
            switchToPage('profile');
        });

        safeAddEventListener('#view-all-bookings', 'click', function(e) {
            e.preventDefault();
            switchToPage('bookings');
        });

        safeAddEventListener('#view-all-payments', 'click', function(e) {
            e.preventDefault();
            switchToPage('payments');
        });

        safeAddEventListener('#view-calendar', 'click', function(e) {
            e.preventDefault();
            switchToPage('bookings');
        });

        // For portfolio/profile image edits
        document.body.addEventListener('change', async function (e) {
            if (e.target && e.target.matches('#profile-pic-input')) {
                await uploadProfileImage(e);
            } else if (e.target && e.target.matches('#portfolio-images-input')) {
                await uploadPortfolioImages(e);
            }
        });
        document.body.addEventListener('click', async function (e) {
            if (e.target.classList.contains('remove-portfolio-img-btn')) {
                const img = e.target.getAttribute('data-img');
                await removePortfolioImage(img);
            }
        });
    }

    function setupNavigation() {
        const navItems = document.querySelectorAll('.nav-item');
        const pageContents = document.querySelectorAll('.page-content');
        const pageTitle = safeQuerySelector('#current-page-title');
        const pageDescription = safeQuerySelector('#current-page-description');

        if (!navItems.length || !pageContents.length || !pageTitle || !pageDescription) {
            return;
        }

        const pageData = {
            'dashboard': {
                title: 'Beautician Dashboard',
                description: 'Welcome back! Here\'s your beauty business overview.'
            },
            'bookings': {
                title: 'Appointment Management',
                description: 'Manage your current and upcoming beauty appointments.'
            },
            'profile': {
                title: 'My Profile',
                description: 'Update your profile information and services.'
            },
            'payments': {
                title: 'Payment Dashboard',
                description: 'View your earnings and payment history.'
            }
        };

        navItems.forEach(item => {
            item.addEventListener('click', function() {
                const pageId = this.getAttribute('data-page');
                navItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');
                pageContents.forEach(page => page.classList.remove('active'));
                const targetPage = document.getElementById(`${pageId}-page`);
                if (targetPage) {
                    targetPage.classList.add('active');
                    if (pageId === 'profile') {
                        setTimeout(() => {
                            loadProfileInfo();
                            loadAvailability();
                            loadServices();
                            loadLocations();
                            loadProfilePreview();
                        }, 100);
                    }
                }
                if (pageData[pageId]) {
                    pageTitle.textContent = pageData[pageId].title;
                    pageDescription.textContent = pageData[pageId].description;
                }
            });
        });
    }

    function profileImgHtml(freelancer, editable) {
        let html = `<div class="profile-pic-block" style="text-align:center;margin-bottom:15px;">
            <img src="${freelancer.profileImage ? freelancer.profileImage : '/images/user-placeholder.svg'}" alt="Profile" style="height:90px;width:90px;border-radius:50%;border: 1.5px solid #b6b6b6;object-fit:cover;" id="current-profile-pic">
