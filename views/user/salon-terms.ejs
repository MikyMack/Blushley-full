    <script>
        // Smooth scrolling for terms navigation
        document.addEventListener('DOMContentLoaded', function() {
            const scrollTargets = document.querySelectorAll('.btn-scroll-target');
            const itemTargets = document.querySelectorAll('.item-scroll-target');
            
            scrollTargets.forEach(target => {
                target.addEventListener('click', function() {
                    const targetId = this.getAttribute('data-scroll');
                    const targetElement = document.querySelector(`.item-scroll-target[data-scroll="${targetId}"]`);
                    
                    if (targetElement) {
                        // Update active class
                        scrollTargets.forEach(t => t.classList.remove('active'));
                        this.classList.add('active');
                        
                        // Scroll to target
                        window.scrollTo({
                            top: targetElement.offsetTop - 100,
                            behavior: 'smooth'
                        });
                    }
                });
            });
            
            // Update active class on scroll
            window.addEventListener('scroll', function() {
                let current = '';
                itemTargets.forEach(section => {
                    const sectionTop = section.offsetTop;
                    const sectionHeight = section.clientHeight;
                    if (pageYOffset >= (sectionTop - 150)) {
                        current = section.getAttribute('data-scroll');
                    }
                });
                
                scrollTargets.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('data-scroll') === current) {
                        link.classList.add('active');
                    }
                });
            });
        });
    </script>

