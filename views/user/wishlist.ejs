        <script>
            $(document).ready(function() {
                let currentProductToMove = null;
                let wishlistItems = [];
                
                // Load wishlist items
                function loadWishlist() {
                    $.ajax({
                        url: '/check-stock-wishlist',
                        method: 'GET',
                        success: function(response) {
                            if (response.success && response.items && response.items.length > 0) {
                                wishlistItems = response.items;
                                renderWishlist(response.items);
                                $('#wishlistLoading').hide();
                                $('#wishlistContainer').show();
                                $('#wishlistEmpty').hide();
                            } else {
                                showEmptyWishlist();
                            }
                        },
                        error: function() {
                            showEmptyWishlist();
                            showToast('Login to see your Wishlist', 'error');
                        }
                    });
                }
                
                // Render wishlist items
                function renderWishlist(items) {
                    const container = $('#wishlistContainer');
                    container.empty();
                    
                    items.forEach((item, index) => {
                        const product = item.productId;
                        if (!product) return;
                        
                        const productCard = createProductCard(item, index);
                        container.append(productCard);
                    });
                }
                
                // Create product card HTML
                function createProductCard(item, index) {
                    const product = item.productId;
                    const isInStock = item.inStock;
                    const hasVariants = product.variants && product.variants.length > 0;
                    const price = product.salePrice || product.basePrice;
                    const hasSale = product.salePrice && product.salePrice < product.basePrice;
                    const mainImage = product.images && product.images.length > 0 ? product.images[0] : '/images/products/default.jpg';
                    
                    return `
                        <div class="card-product wow fadeInUp" data-wow-delay="${index * 0.1}s" data-product-id="${product._id}">
                            <div class="card-product-wrapper">
                                <!-- Stock Badge -->
                                <div class="stock-badge ${isInStock ? 'in-stock' : 'out-of-stock'}">
                                    ${isInStock ? 'In Stock' : 'Out of Stock'}
                                </div>
                                
                                <!-- Remove Button -->
                                <div class="remove-wishlist" onclick="removeFromWishlist('${product._id}', this)">
                                    <i class="icon-close"></i>
                                </div>
                                
                                <!-- Product Image -->
                                <a href="/product/${product.slug}" class="product-img">
                                    <img class="lazyload img-product" data-src="${mainImage}" src="${mainImage}" alt="${product.title}">
                                    ${product.images && product.images.length > 1 ? 
                                        `<img class="lazyload img-hover" data-src="${product.images[1]}" src="${product.images[1]}" alt="${product.title}">` : 
                                        `<img class="lazyload img-hover" data-src="${mainImage}" src="${mainImage}" alt="${product.title}">`
                                    }
                                </a>
                                
                                <!-- Sale Badge -->
                                ${hasSale ? `<div class="on-sale-wrap"><span class="on-sale-item">-${Math.round((1 - product.salePrice/product.basePrice) * 100)}%</span></div>` : ''}
                                
                                <!-- Variant Selection (if applicable) -->
                                ${hasVariants ? createVariantSelection(product, item.variantName, item.optionValue) : ''}
                                
                                <!-- Add to Cart Button -->
                                <div class="list-btn-main">
                                    ${isInStock ? 
                                        `<button class="btn-main-product move-to-cart-btn" 
                                                onclick="moveToCart('${product._id}', ${hasVariants}, '${item.variantName || ''}', '${item.optionValue || ''}')">
                                            Add To Cart
                                        </button>` :
                                        `<button class="btn-main-product move-to-cart-btn" disabled>
                                            Out of Stock
                                        </button>`
                                    }
                                </div>
                            </div>
                            <div class="card-product-info">
                                <a href="/product/${product.slug}" class="title link">${product.title}</a>
                                <div class="price">
                                    ${hasSale ? `<span class="old-price">₹${product.basePrice.toFixed(2)}</span>` : ''}
                                    <span class="current-price">₹${price}</span>
                                </div>
                            </div>
                        </div>
                    `;
                }
                
                // Create variant selection HTML
                function createVariantSelection(product, selectedVariantName, selectedOptionValue) {
                    let html = '<div class="variant-selection">';
                    
                    product.variants.forEach(variant => {
                        html += `
                            <div class="variant-group">
                                <label class="variant-label">${variant.name}:</label>
                                <select class="variant-select" data-variant-name="${variant.name}" 
                                        onchange="updateWishlistVariant('${product._id}', '${variant.name}', this.value)">
                                    <option value="">Select ${variant.name}</option>
                        `;
                        
                        variant.options.forEach(option => {
                            const isSelected = selectedVariantName === variant.name && selectedOptionValue === option.value;
                            html += `<option value="${option.value}" ${isSelected ? 'selected' : ''} 
                                     ${option.stock <= 0 ? 'disabled' : ''}>
                                     ${option.value} ${option.stock <= 0 ? '(Out of Stock)' : ''}
                                     </option>`;
                        });
                        
                        html += `</select></div>`;
                    });
                    
                    html += '</div>';
                    return html;
                }
                
                // Show empty wishlist state
                function showEmptyWishlist() {
                    $('#wishlistLoading').hide();
                    $('#wishlistContainer').hide();
                    $('#wishlistEmpty').show();
                }
                
                // Remove from wishlist
                window.removeFromWishlist = function(productId, element) {
                    if (!confirm('Are you sure you want to remove this item from your wishlist?')) {
                        return;
                    }
                    
                    $.ajax({
                        url: '/removeWishlist/' + productId,
                        method: 'DELETE',
                        success: function(response) {
                            if (response.success) {
                                $(element).closest('.card-product').fadeOut(300, function() {
                                    $(this).remove();
                                    // Check if wishlist is now empty
                                    if ($('#wishlistContainer .card-product').length === 0) {
                                        showEmptyWishlist();
                                    }
                                });
                                showToast('Removed from wishlist', 'success');
                            } else {
                                showToast(response.message || 'Error removing item', 'error');
                            }
                        },
                        error: function() {
                            showToast('Error removing item', 'error');
                        }
                    });
                }
                
                // Update variant selection in wishlist
                window.updateWishlistVariant = function(productId, variantName, optionValue) {
                    // Store the selected variant in localStorage or update via API
                    // This is a simplified version - you might want to update this on the server
                    showToast(`Selected ${variantName}: ${optionValue}`, 'info');
                    
                    // You could make an API call to update the wishlist item variant
                    // $.post('/updateWishlistVariant', { productId, variantName, optionValue });
                }
                
                // Move to cart
                window.moveToCart = function(productId, hasVariants, variantName, optionValue) {
                    const productItem = wishlistItems.find(item => item.productId._id === productId);
                    
                    if (!productItem || !productItem.inStock) {
                        showToast('Product is out of stock', 'error');
                        return;
                    }
                    
                    if (hasVariants && (!variantName || !optionValue)) {
                        // Show variant modal if no variant selected
                        showVariantModal(productId, productItem.productId);
                        return;
                    }
                    
                    // Proceed with moving to cart
                    performMoveToCart(productId, variantName, optionValue);
                }
                
                // Show variant selection modal
                function showVariantModal(productId, product) {
                    currentProductToMove = { productId, product };
                    
                    let modalContent = '<div class="variant-modal-content">';
                    modalContent += `<p>Please select variant for: <strong>${product.title}</strong></p>`;
                    
                    product.variants.forEach(variant => {
                        modalContent += `
                            <div class="mb-3">
                                <label class="form-label">${variant.name}</label>
                                <select class="form-select variant-option-select" data-variant-name="${variant.name}">
                                    <option value="">Select ${variant.name}</option>
                        `;
                        
                        variant.options.forEach(option => {
                            modalContent += `<option value="${option.value}" ${option.stock <= 0 ? 'disabled' : ''}>
                                            ${option.value} ${option.stock <= 0 ? '(Out of Stock)' : ''}
                                            </option>`;
                        });
                        
                        modalContent += `</select></div>`;
                    });
                    
                    modalContent += '</div>';
                    
                    $('#variantModalBody').html(modalContent);
                    $('#variantModal').modal('show');
                }
                
                // Confirm move to cart from modal
                $('#confirmMoveToCart').click(function() {
                    const variantSelects = $('.variant-option-select');
                    let selectedVariants = {};
                    let isValid = true;
                    
                    variantSelects.each(function() {
                        const variantName = $(this).data('variant-name');
                        const optionValue = $(this).val();
                        
                        if (!optionValue) {
                            isValid = false;
                            $(this).addClass('is-invalid');
                        } else {
                            selectedVariants[variantName] = optionValue;
                            $(this).removeClass('is-invalid');
                        }
                    });
                    
                    if (!isValid) {
                        showToast('Please select all variant options', 'error');
                        return;
                    }
                    
                    // Convert selected variants to format needed for API
                    const variantNames = Object.keys(selectedVariants);
                    const firstVariantName = variantNames[0];
                    const firstOptionValue = selectedVariants[firstVariantName];
                    
                    performMoveToCart(currentProductToMove.productId, firstVariantName, firstOptionValue);
                    $('#variantModal').modal('hide');
                });
                
                // Perform the actual move to cart API call
                function performMoveToCart(productId, variantName, optionValue) {
                    $.ajax({
                        url: '/move-to-cart',
                        method: 'POST',
                        data: {
                            productId: productId,
                            variantName: variantName || null,
                            optionValue: optionValue || null,
                            quantity: 1
                        },
                        success: function(response) {
                            if (response.success) {
                                // Remove the item from wishlist display
                                $(`[data-product-id="${productId}"]`).fadeOut(300, function() {
                                    $(this).remove();
                                    // Check if wishlist is now empty
                                    if ($('#wishlistContainer .card-product').length === 0) {
                                        showEmptyWishlist();
                                    }
                                });
                                
                                // Update cart count in header (if you have one)
                                updateCartCount();
                                
                                showToast('Added to cart successfully', 'success');
                            } else {
                                showToast(response.message || 'Error adding to cart', 'error');
                            }
                        },
                        error: function() {
                            showToast('Error adding to cart', 'error');
                        }
                    });
                }
                
                // Update cart count in header
                function updateCartCount() {
                    // This depends on how you display cart count
                    // Example: If you have a span with id "cartCount"
                    $('#cartCount').each(function() {
                        const currentCount = parseInt($(this).text()) || 0;
                        $(this).text(currentCount + 1);
                        $(this).addClass('updated');
                        setTimeout(() => $(this).removeClass('updated'), 500);
                    });
                }
                
                // Toast notification function
                function showToast(message, type = 'info') {
                    // Create toast element
                    const toast = $(`
                        <div class="toast-notification toast-${type}">
                            ${message}
                        </div>
                    `);
                    
                    // Add to body
                    $('body').append(toast);
                    
                    // Show toast
                    setTimeout(() => toast.addClass('show'), 10);
                    
                    // Remove after 3 seconds
                    setTimeout(() => {
                        toast.removeClass('show');
                        setTimeout(() => toast.remove(), 300);
                    }, 3000);
                }
                
                // Add CSS for toast
                $('<style>').text(`
                    .toast-notification {
                        position: fixed;
                        top: 20px;
                        right: 20px;
                        padding: 12px 20px;
                        border-radius: 4px;
                        color: white;
                        z-index: 9999;
                        transform: translateX(100%);
                        opacity: 0;
                        transition: all 0.3s ease;
                    }
                    .toast-notification.show {
                        transform: translateX(0);
                        opacity: 1;
