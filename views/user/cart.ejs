        <script>
            // Check if user is logged in
            const isUserLoggedIn = <%= (user && user.role === "user") ? 'true' : 'false' %>;

            // Format currency
            function formatCurrency(amount) {
                return '₹' + parseFloat(amount || 0).toFixed(2);
            }

            // Fetch cart data
            async function fetchCart() {
                if (!isUserLoggedIn) {
                    renderCartItem([]);
                    return;
                }

                try {
                    const response = await fetch('/listCart', {
                        credentials: 'same-origin'
                    });

                    if (!response.ok) {
                        throw new Error('Failed to fetch cart');
                    }

                    const data = await response.json();

                    if (data.success) {
                        renderCartItem(data.cart?.items || []);
                    } else {
                        renderCartItem([]);
                    }
                } catch (error) {
                    console.error('Error fetching cart:', error);
                    renderCartItem([]);
                }
            }

            // Render cart items
            function renderCartItem(items) {
                const tbody = document.getElementById('cart-table-rows');
                const clearBtn = document.getElementById('cart-clear-btn');
                const checkoutBtn = document.getElementById('checkout-btn');

                if (!tbody) return;

                let subtotal = 0;
                tbody.innerHTML = '';

                if (!items || items.length === 0) {
                    tbody.innerHTML = `
                <tr>
                    <td colspan="5" class="text-center py-5">
                        <div class="empty-cart-message">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h5>Your cart is empty</h5>
                            <p class="text-muted">Add some products to get started!</p>
                            <a href="/shop" class="btn btn-primary mt-2">Continue Shopping</a>
                        </div>
                    </td>
                </tr>
            `;

                    if (clearBtn) clearBtn.style.display = 'none';
                    if (checkoutBtn) {
                        checkoutBtn.style.pointerEvents = 'none';
                        checkoutBtn.style.opacity = '0.5';
                    }
                } else {
                    // Show clear button
                    if (clearBtn) clearBtn.style.display = 'block';
                    if (checkoutBtn) {
                        checkoutBtn.style.pointerEvents = 'auto';
                        checkoutBtn.style.opacity = '1';
                    }

                    // Render each cart item
                    items.forEach(item => {
                        const product = item.productId || {};
                        const image = product.images?.[0] || '/images/no-image.png';
                        const title = product.title || 'Product';
                        const price = Number(item.price) || 0;
                        const quantity = Number(item.quantity) || 1;
                        const itemTotal = price * quantity;

                        subtotal += itemTotal;

                        // Create row HTML
                        const rowHTML = `
                    <tr data-item-id="${item._id}">
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="me-3" style="width: 80px;">
                                    <img src="${image}" 
                                         alt="${title}" 
                                         style="width: 100%; height: auto; border-radius: 4px;">
                                </div>
                                <div>
                                    <h6 class="mb-1">${title}</h6>
                                    ${item.variantName || item.optionValue ?
                                `<small class="text-muted">${item.variantName || ''}: ${item.optionValue || ''}</small>` :
                                ''}
                                </div>
                            </div>
                        </td>
                        <td class="text-center align-middle">
                            ${formatCurrency(price)}
                        </td>
                        <td class="text-center align-middle">
                            <div class="quantity-control d-inline-flex align-items-center">
                                <button type="button" 
                                        class="btn btn-sm btn-outline-secondary"
                                        onclick="updateQuantity('${item._id}', -1)">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <input type="text" 
                                       class="form-control form-control-sm mx-1 text-center" 
                                       value="${quantity}" 
                                       style="width: 50px;"
                                       readonly>
                                <button type="button" 
                                        class="btn btn-sm btn-outline-secondary"
                                        onclick="updateQuantity('${item._id}', 1)">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>
                        </td>
                        <td class="text-center align-middle">
                            ${formatCurrency(itemTotal)}
                        </td>
                        <td class="text-center align-middle">
                            <button type="button" 
                                    class="btn btn-sm btn-outline-danger"
                                    onclick="removeCartItem('${item._id}')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;

                        tbody.innerHTML += rowHTML;
                    });
                }

                // Update totals
                const discount = 0; // You can implement discount logic later
                const shipping = 0; // Free shipping
                const total = subtotal - discount + shipping;

                // Update display elements
                const subtotalEl = document.getElementById('cart-subtotal');
                const discountEl = document.getElementById('cart-discount');
                const totalEl = document.getElementById('cart-total');

                if (subtotalEl) subtotalEl.textContent = formatCurrency(subtotal);
                if (discountEl) discountEl.textContent = `-${formatCurrency(discount)}`;
                if (totalEl) totalEl.textContent = formatCurrency(total);

                // Update cart count in header
                updateHeaderCartCount(items);
            }

            // Update quantity
            async function updateQuantity(itemId, delta) {
                if (!isUserLoggedIn) {
                    window.location.href = '/userLogin?redirect=/cart';
                    return;
                }

                try {
                    // Find current quantity from the table
                    const row = document.querySelector(`tr[data-item-id="${itemId}"]`);
                    if (!row) return;

                    const qtyInput = row.querySelector('input[type="text"]');
                    if (!qtyInput) return;

                    let currentQty = parseInt(qtyInput.value) || 1;
                    let newQty = currentQty + delta;

                    // Minimum quantity is 1
                    if (newQty < 1) {
                        if (confirm('Remove this item from cart?')) {
                            await removeCartItem(itemId);
                        }
                        return;
                    }

                    // Update via API
                    const response = await fetch('/updateCart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            itemId: itemId,
                            quantity: newQty
                        })
                    });

                    const data = await response.json();

                    if (data.success) {
                        fetchCart(); // Refresh cart
                    } else {
                        alert(data.message || 'Failed to update quantity');
                    }
                } catch (error) {
                    console.error('Error updating quantity:', error);
                    alert('Failed to update quantity. Please try again.');
                }
            }

            // Remove item
            async function removeCartItem(itemId) {
                if (!isUserLoggedIn) {
                    window.location.href = '/userLogin?redirect=/cart';
                    return;
                }

                if (confirm('Are you sure you want to remove this item from your cart?')) {
                    try {
                        const response = await fetch(`/removeCart/${itemId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });

                        const data = await response.json();

                        if (data.success) {
                            fetchCart(); // Refresh cart
                        } else {
                            alert(data.message || 'Failed to remove item');
                        }
                    } catch (error) {
                        console.error('Error removing item:', error);
                        alert('Failed to remove item. Please try again.');
                    }
                }
            }

            // Clear cart
            async function clearCart() {
                if (!isUserLoggedIn) {
                    window.location.href = '/userLogin?redirect=/cart';
                    return;
                }

                if (confirm('Are you sure you want to clear your entire cart?')) {
                    try {
                        const response = await fetch('/clearCart', {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });

                        const data = await response.json();

                        if (data.success) {
                            fetchCart(); // Refresh cart
                        } else {
                            alert(data.message || 'Failed to clear cart');
                        }
                    } catch (error) {
                        console.error('Error clearing cart:', error);
                        alert('Failed to clear cart. Please try again.');
                    }
                }
            }

            // Update cart count in header
            function updateHeaderCartCount(items) {
                if (!items || !Array.isArray(items)) return;

                const totalQty = items.reduce((sum, item) => sum + (item.quantity || 0), 0);

                // Update all cart count elements
                const countElements = document.querySelectorAll('.cart-count, .count-box');
                countElements.forEach(el => {
                    if (el.classList.contains('count-box')) {
                        el.textContent = totalQty;
                        el.style.display = totalQty > 0 ? 'block' : 'none';
                    } else {
                        el.textContent = `(${totalQty})`;
                    }
                });
            }

            // Handle terms agreement checkbox
            document.addEventListener('DOMContentLoaded', function () {
                const agreeCheckbox = document.getElementById('check-agree');
                const checkoutBtn = document.getElementById('checkout-btn');

                if (agreeCheckbox && checkoutBtn) {
                    agreeCheckbox.addEventListener('change', function () {
                        if (this.checked) {
                            checkoutBtn.style.pointerEvents = 'auto';
                            checkoutBtn.style.opacity = '1';
                        } else {
                            checkoutBtn.style.pointerEvents = 'none';
                            checkoutBtn.style.opacity = '0.5';
                        }
                    });
                }

                // Initialize cart
                if (isUserLoggedIn) {
                    fetchCart();
                }
            });

            // Make functions available globally
            window.fetchCart = fetchCart;
            window.updateQuantity = updateQuantity;
            window.removeCartItem = removeCartItem;
            window.clearCart = clearCart;
        </script>

