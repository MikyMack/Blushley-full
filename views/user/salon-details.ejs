<script>
    // Global state
    let selectedServices = [];
    let totalAmount = 0;
    let isLoggedIn = <%= isLoggedIn || 'false' %>;

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', function() {
        // Load selected services from localStorage if any
        const savedServices = localStorage.getItem(`selectedServices_${salonId}`);
        if (savedServices) {
            selectedServices = JSON.parse(savedServices);
            updateSelectedServicesUI();
            updateTotalPrice();
        }
    });

    // Add service to selection
    function addService(serviceId, serviceName, price, duration) {
        // Check if already added
        const existingIndex = selectedServices.findIndex(s => s.id === serviceId);
        
        if (existingIndex === -1) {
            // Add new service
            selectedServices.push({
                id: serviceId,
                name: serviceName,
                price: price,
                duration: duration
            });
            
            // Add visual feedback
            const serviceItem = document.querySelector(`[data-service-id="${serviceId}"]`);
            serviceItem.style.borderColor = '#667eea';
            serviceItem.style.background = '#f8f9ff';
            
            // Update button text
            const button = serviceItem.querySelector('.add-to-cart');
            button.textContent = 'Added ‚úì';
            button.style.background = '#4CAF50';
            button.disabled = true;
            
            // Set timeout to revert button
            setTimeout(() => {
                button.textContent = 'Add +';
                button.style.background = '#667eea';
                button.disabled = false;
            }, 1500);
        } else {
            // Remove service
            selectedServices.splice(existingIndex, 1);
            
            // Remove visual feedback
            const serviceItem = document.querySelector(`[data-service-id="${serviceId}"]`);
            serviceItem.style.borderColor = '#f0f0f0';
            serviceItem.style.background = 'white';
            
            // Update button
            const button = serviceItem.querySelector('.add-to-cart');
            button.textContent = 'Add +';
            button.style.background = '#667eea';
        }
        
        // Update UI
        updateSelectedServicesUI();
        updateTotalPrice();
        
        // Save to localStorage
        saveSelectedServices();
    }

    // Update selected services list
    function updateSelectedServicesUI() {
        const container = document.getElementById('selectedList');
        const bookButton = document.getElementById('bookButton');
        
        if (selectedServices.length === 0) {
            container.innerHTML = `
                <div style="text-align: center; padding: 30px; color: #999;">
                    <div style="font-size: 48px; margin-bottom: 10px;">üõí</div>
                    <p>No services selected yet</p>
                    <p style="font-size: 14px;">Select services to book</p>
                </div>
            `;
            
            if (bookButton) {
                bookButton.disabled = true;
            }
            return;
        }
        
        let html = '';
        selectedServices.forEach((service, index) => {
            html += `
                <div class="selected-item">
                    <div>
                        <div style="font-weight: 600; margin-bottom: 5px;">${service.name}</div>
                        <div style="font-size: 12px; color: #666;">${service.duration} min ‚Ä¢ ‚Çπ${service.price}</div>
                    </div>
                    <button class="remove-service" onclick="removeService('${service.id}')">
                        √ó
                    </button>
                </div>
            `;
        });
        
        container.innerHTML = html;
        
        if (bookButton) {
            bookButton.disabled = false;
        }
    }

    // Remove service
    function removeService(serviceId) {
        // Find and remove
        const index = selectedServices.findIndex(s => s.id === serviceId);
        if (index !== -1) {
            selectedServices.splice(index, 1);
            
            // Remove visual feedback
            const serviceItem = document.querySelector(`[data-service-id="${serviceId}"]`);
            if (serviceItem) {
                serviceItem.style.borderColor = '#f0f0f0';
                serviceItem.style.background = 'white';
                
                const button = serviceItem.querySelector('.add-to-cart');
                button.textContent = 'Add +';
                button.style.background = '#667eea';
            }
            
            // Update UI
            updateSelectedServicesUI();
            updateTotalPrice();
            saveSelectedServices();
        }
    }

    // Update total price
    function updateTotalPrice() {
        totalAmount = selectedServices.reduce((sum, service) => sum + service.price, 0);
        document.getElementById('totalPrice').textContent = `Total: ‚Çπ${totalAmount}`;
    }

    // Save selected services to localStorage
    function saveSelectedServices() {
        const salonId = '<%= salon._id %>';
        localStorage.setItem(`selectedServices_${salonId}`, JSON.stringify(selectedServices));
    }

    // Proceed to booking
    function proceedToBooking() {
        if (selectedServices.length === 0) {
            alert('Please select at least one service');
            return;
        }
        
        if (!isLoggedIn) {
            // Redirect to login with selected services in session
            const redirectUrl = `/userLogin?redirect=${encodeURIComponent(window.location.pathname)}&services=${encodeURIComponent(JSON.stringify(selectedServices))}`;
            window.location.href = redirectUrl;
            return;
        }
        
        // Show booking modal
        openBookingModal();
    }

    // Open booking modal (using your existing modal)
    function openBookingModal() {
        // Store selected services in session for the booking modal
        sessionStorage.setItem('bookingServices', JSON.stringify(selectedServices));
        sessionStorage.setItem('bookingSalonId', '<%= salon._id %>');
        sessionStorage.setItem('bookingSalonName', '<%= salon.name %>');
        
        // Show your existing booking modal
        document.getElementById('bookingModal').style.display = 'flex';
        document.body.style.overflow = 'hidden';
        
        // You can initialize your existing booking modal here
        // initializeBookingModal();
    }

    // Close booking modal
    function closeBookingModal() {
        document.getElementById('bookingModal').style.display = 'none';
        document.body.style.overflow = 'auto';
    }

    // Check if user came from login with services
    function checkLoginRedirect() {
        const urlParams = new URLSearchParams(window.location.search);
        const servicesParam = urlParams.get('services');
        
        if (servicesParam) {
            try {
                const services = JSON.parse(servicesParam);
                selectedServices = services;
                updateSelectedServicesUI();
                updateTotalPrice();
                saveSelectedServices();
                
                // Remove the parameter from URL
                const newUrl = window.location.pathname;
                window.history.replaceState({}, document.title, newUrl);
            } catch (e) {
                console.error('Error parsing services:', e);
            }
        }
    }

    // Call this on page load if user is logged in
    if (isLoggedIn) {
        checkLoginRedirect();
    }

    // Share salon
    function shareSalon() {
        if (navigator.share) {
            navigator.share({
                title: '<%= salon.name %>',
                text: 'Check out this salon!',
                url: window.location.href
            });
        } else {
            // Fallback: copy to clipboard
            navigator.clipboard.writeText(window.location.href).then(() => {
                alert('Link copied to clipboard!');
            });
        }
    }

    // Toggle favorite
    function toggleFavorite() {
        const salonId = '<%= salon._id %>';
        let favorites = JSON.parse(localStorage.getItem('favoriteSalons') || '[]');
        
        const index = favorites.indexOf(salonId);
        if (index === -1) {
            favorites.push(salonId);
            alert('Added to favorites!');
        } else {
            favorites.splice(index, 1);
            alert('Removed from favorites!');
        }
        
        localStorage.setItem('favoriteSalons', JSON.stringify(favorites));
    }
</script>
