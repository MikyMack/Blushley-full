                            <script>
                            // Ensure jQuery is loaded before running code
                            (function waitForJquery() {
                                if (typeof window.$ === 'undefined') {
                                    setTimeout(waitForJquery, 20);
                                    return;
                                }

                                // UI & Pagination State
                                let beautyTipCurrentPage = 1;
                                let beautyTipLimit = 10;
                                let beautyTipTotal = 0;
                                let beautyTipTotalPages = 1;
                                let beautyTipSearch = '';

                                function fetchBeautyTips() {
                                    $('#beautytip-list-loader').remove();
                                    $('#beautytips-list').html('<tr id="beautytip-list-loader"><td colspan="6" style="text-align:center;"><span>Loading...</span></td></tr>');
                                    $.get('/beautytips', {
                                        page: beautyTipCurrentPage,
                                        limit: beautyTipLimit,
                                        search: beautyTipSearch
                                    }, function(data){
                                        renderBeautyTypList(data.tips, data.total, data.page, data.limit);
                                    })
                                    .fail(function(){ 
                                        $('#beautytips-list').html('<tr><td colspan="6" style="text-align:center;">Failed to load data.</td></tr>');
                                    });
                                }
                                function renderBeautyTypList(tips, total, page, limit) {
                                    let html = '';
                                    if (!tips || !tips.length) {
                                        html = '<tr><td colspan="6" style="text-align:center;">No beauty tips found.</td></tr>';
                                    } else {
                                        tips.forEach(function(tip) {
                                            html += `
                                            <tr>
                                                <td>
                                                    ${tip.image ? `<img src="${tip.image}" style="width:48px;height:48px;object-fit:cover;border-radius:8px;">` : '<span class="text-tiny text-gray">No Image</span>'}
                                                </td>
                                                <td>
                                                    <strong>${tip.title}</strong>
                                                    ${tip.tags && tip.tags.length ? `<br/><span class="tags-row">${tip.tags.map(t => `<span class="tip-tag">${t}</span>`).join(' ')}</span>` : ''}
                                                </td>
                                                <td>${tip.category && tip.category.name ? tip.category.name : '<span class="text-tiny text-gray">-</span>'}</td>
                                                <td>
                                                    <span class="status-badge ${tip.status}">
                                                        ${tip.status.charAt(0).toUpperCase() + tip.status.slice(1)}
                                                    </span>
                                                    <button class="tip-status-toggle-btn" title="Toggle Status" onclick="showStatusSelectPopup('${tip._id}', this)">
                                                        <i class="icon-edit"></i>
                                                    </button>
                                                </td>
                                                <td>${(tip.createdAt ? (new Date(tip.createdAt)).toLocaleDateString() : '-')}</td>
                                                <td>
                                                    <button class="wg-btn wg-btn-xs" onclick="showEditBeautyTipModal('${tip._id}')">
                                                        <i class="icon-edit"></i>
                                                    </button>
                                                    <button class="wg-btn wg-btn-xs wg-btn-danger" onclick="showDeleteBeautyTipModal('${tip._id}')">
                                                        <i class="icon-trash-2"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            `;
                                        });
                                    }
                                    $('#beautytips-list').html(html);

                                    // Pagination
                                    beautyTipTotal = total;
                                    beautyTipTotalPages = Math.ceil(total / limit);
                                    $('#beautytip-showing-entries').html(
                                        `Showing ${(total === 0) ? 0 : ((page - 1) * limit + 1)} to ${Math.min(page * limit, total)} of ${total} entries`
                                    );
                                    let pagiHtml = '';
                                    if (beautyTipTotalPages > 1) {
                                        for (let i = 1; i <= beautyTipTotalPages; i++) {
                                            pagiHtml += `<li class="${i === page ? 'active' : ''}"><a href="#" onclick="goToBeautyTipPage(${i});return false;">${i}</a></li>`
                                        }
                                    }
                                    $('#beautytip-pagination').html(pagiHtml);
                                }
                                window.goToBeautyTipPage = function(p) {
                                    beautyTipCurrentPage = p;
                                    fetchBeautyTips();
                                }
                                $('#beautytip-limit-select').change(function(){
                                    beautyTipLimit = parseInt($(this).val());
                                    beautyTipCurrentPage = 1;
                                    fetchBeautyTips();
                                });
                                $('#beautytip-search-btn').on('click', function() {
                                    beautyTipSearch = $('#beautytip-search-input').val();
                                    beautyTipCurrentPage = 1; fetchBeautyTips();
                                });
                                $('#beautytip-search-input').on('keypress', function(e) {
                                    if (e.key === 'Enter') { $('#beautytip-search-btn').click(); }
                                });

                                // Add/Edit Modal Handlers
                                window.showAddBeautyTipModal = function() {
                                    clearBeautyTipForm();
                                    $('#beautytip-modal-title').text('Add New Beauty Tip');
                                    $('#add-beautytip-modal').fadeIn(100);
                                }
                                window.showEditBeautyTipModal = function(id) {
                                    // GET tip data and fill
                                    $.get('/beautytips', { id: id }, function(resp){
                                        if (resp && resp.tip) {
                                            fillBeautyTipForm(resp.tip)
                                            $('#beautytip-modal-title').text('Edit Beauty Tip');
                                            $('#add-beautytip-modal').fadeIn(100);
                                        }
                                    });
                                }
                                window.closeBeautyTipModal = function() {
                                    $('#add-beautytip-modal').fadeOut(100);
                                }
                                function clearBeautyTipForm() {
                                    $('#beautytip-form')[0].reset();
                                    $('#beautytip-id').val('');
                                    $('#beautytip-image-preview').hide();
                                    $('#beautytip-tags').val('');
                                    $('#beautytip-relatedProducts').val('');
                                }
                                function fillBeautyTipForm(tip) {
                                    $('#beautytip-id').val(tip._id);
                                    $('#beautytip-title').val(tip.title);
                                    $('#beautytip-slug').val(tip.slug);
                                    $('#beautytip-shortDescription').val(tip.shortDescription);
                                    $('#beautytip-fullDescription').val(tip.fullDescription);
                                    $('#beautytip-category').val(tip.category ? tip.category._id : '');
                                    $('#beautytip-status').val(tip.status);
                                    $('#beautytip-tags').val(tip.tags ? tip.tags.join(',') : '');
                                    $('#beautytip-relatedProducts').val(Array.isArray(tip.relatedProducts) ? tip.relatedProducts.join(',') : '');
                                    if (tip.image) {
                                        $('#beautytip-image-preview').attr('src', tip.image).show();
                                    } else {
                                        $('#beautytip-image-preview').hide();
                                    }
                                }
                                // Preview Image
                                $('#beautytip-image').on('change', function() {
                                    if(this.files && this.files[0]) {
                                        let reader = new FileReader();
                                        reader.onload = function(e) {
                                            $('#beautytip-image-preview').attr('src', e.target.result).show();
                                        }
                                        reader.readAsDataURL(this.files[0]);
                                    }
                                });
                                // Submit Add/Edit
                                $('#beautytip-form').on('submit', function(e) {
                                    e.preventDefault();
                                    let formData = new FormData(this);
                                    let id = $('#beautytip-id').val();
                                    let method = id ? 'PUT' : 'POST';
                                    let url = id ? `/beautytip/update/${id}` : '/beautytip/create';
                                    $.ajax({
                                        url: url,
                                        type: method,
                                        data: formData,
                                        processData: false,
                                        contentType: false,
                                        success: function() {
                                            window.closeBeautyTipModal();
                                            fetchBeautyTips();
                                        },
                                        error: function(res) {
                                            alert("Something went wrong! " + (res.responseJSON && res.responseJSON.message ? res.responseJSON.message : ""));
                                        }
                                    });
                                });

                                // Delete
                                let deletingBeautyTipId = null;
                                window.showDeleteBeautyTipModal = function(id) {
                                    deletingBeautyTipId = id;
                                    $('#delete-beautytip-modal').fadeIn(120);
                                }
                                window.closeDeleteBeautyTipModal = function() {
                                    deletingBeautyTipId = null;
                                    $('#delete-beautytip-modal').fadeOut(100);
                                }
                                window.deleteBeautyTipConfirmed = function() {
                                    if(!deletingBeautyTipId) return;
                                    $.ajax({
                                        url: `/beautytip/delete/${deletingBeautyTipId}`,
                                        type: 'DELETE',
                                        success: function(){
                                            window.closeDeleteBeautyTipModal();
                                            fetchBeautyTips();
                                        },
                                        error: function(){
                                            alert('Error deleting beauty tip');
                                        }
                                    });
                                }

                                // Change Status
                                window.showStatusSelectPopup = function(tipId, btn) {
                                    // Visual popup for inline status change
                                    const offset = $(btn).offset();
                                    let popup = $('#beautytip-status-popup');
                                    if(!popup.length) {
                                        popup = $(`
                                            <div id="beautytip-status-popup" style="position:absolute;z-index:9999;background:#fff;border:1px solid #d1d1d1;padding:12px 18px;border-radius:8px;box-shadow:0 4px 32px #0001;">
                                                <select id="beautytip-popup-status-select">
                                                    <option value="draft">Draft</option>
                                                    <option value="published">Published</option>
                                                    <option value="archived">Archived</option>
                                                </select>
                                                <button id="beautytip-popup-status-save" style="margin-left:8px;" class="wg-btn wg-btn-xs"><i class="icon-check"></i></button>
                                            </div>
                                        `);
                                        $('body').append(popup);
                                    }
                                    popup.show().css({top: offset.top + $(btn).height(), left: offset.left});
                                    popup.data('tipid', tipId);

                                    // Remove old handler
                                    $('#beautytip-popup-status-save').off('click').on('click', function(){
                                        let status = $('#beautytip-popup-status-select').val();
                                        $.ajax({
                                            url: `/beautytip/${tipId}/toggle-status`,
                                            type: 'PATCH',
                                            data: { status },
                                            success: function(){
                                                popup.hide();
                                                fetchBeautyTips();
                                            }
                                        });
                                    });
                                    $(document).on('mousedown.popup', function(e) {
                                        if(!$(e.target).closest('#beautytip-status-popup').length && !$(e.target).closest('.tip-status-toggle-btn').length) {
                                            popup.hide();
                                            $(document).off('mousedown.popup');
                                        }
                                    });
                                }

                                // Fetch on load
                                $(function() {
                                    fetchBeautyTips();
                                });

                            })();
                            </script>
