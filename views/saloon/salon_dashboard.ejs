                    document.querySelector('#appointment-details-modal .summary-row:nth-child(3) span:last-child').textContent = `₹${appointmentData.tax}`;
                    document.querySelector('#appointment-details-modal .summary-total span:last-child').textContent = `₹${appointmentData.total}`;
                    
                    // Update client notes
                    document.querySelector('#appointment-details-modal p').textContent = appointmentData.notes;
                    
