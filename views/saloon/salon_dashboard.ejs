            sidebarNavigation.classList.remove('mobile-hidden');
            mainContentArea.classList.remove('full-width');
            mobileIcon.className = 'fas fa-bars';
          }
        }
        setSidebarState();
        window.addEventListener('resize', setSidebarState);

        if (mobileMenuToggle) {
          mobileMenuToggle.addEventListener('click', function () {
            if (!sidebarNavigation || !mainContentArea) return;
            sidebarNavigation.classList.toggle('mobile-hidden');
            mainContentArea.classList.toggle('full-width');
            const icon = this.querySelector('i');
            if (!icon) return;
            icon.className = sidebarNavigation.classList.contains('mobile-hidden') ? 'fas fa-bars' : 'fas fa-times';
          });
        }

        // Add data-labels for accessibility on tables
        (function makeTablesResponsive() {
          const tables = document.querySelectorAll('table.data-table');
          tables.forEach(table => {
            const headers = Array.from(table.querySelectorAll('thead th')).map(th => th.textContent.trim());
            table.querySelectorAll('tbody tr').forEach(row => {
              row.querySelectorAll('td').forEach((cell, idx) => {
                cell.setAttribute('data-label', headers[idx] || '');
              });
            });
          });
        })();

        // Page navigation and meta
        const navItems = document.querySelectorAll('.nav-item');
        const pageContents = document.querySelectorAll('.page-content');
        const pageTitle = document.getElementById('current-page-title');
        const pageDescription = document.getElementById('current-page-description');

        const pageMeta = {
          dashboard: {
            title: 'Salon Dashboard',
            description: 'Welcome back! Here\'s your salon business overview.'
          },
          appointments: {
            title: 'Appointment Management',
            description: 'Manage your appointments and client schedules.'
          },
          earnings: {
            title: 'Earnings & Revenue',
            description: 'Track your earnings and revenue breakdown.'
          },
          profile: {
            title: 'Salon Profile',
            description: 'Manage your salon information and settings.'
          }
        };

        navItems.forEach(item => {
          item.addEventListener('click', function () {
            const pageId = this.getAttribute('data-page');
            navItems.forEach(i => i.classList.remove('active'));
            this.classList.add('active');
            pageContents.forEach(p => p.classList.remove('active'));
            const showPage = document.getElementById(`${pageId}-page`);
            if (showPage) showPage.classList.add('active');
            if (pageTitle && pageDescription && pageMeta[pageId]) {
              pageTitle.textContent = pageMeta[pageId].title;
              pageDescription.textContent = pageMeta[pageId].description;
            }
            if (window.innerWidth <= 992 && sidebarNavigation && mainContentArea && mobileMenuToggle) {
              sidebarNavigation.classList.add('mobile-hidden');
              mainContentArea.classList.add('full-width');
              const icon = mobileMenuToggle.querySelector('i');
              if (icon) icon.className = 'fas fa-bars';
            }
          });
        });

        // --- Show Appointment Details Modal ---
        const appointmentDetailsModal = document.getElementById('appointment-details-modal');
        const closeAppointmentDetailsModal = document.getElementById('close-appointment-details-modal');
        const closeAppointmentDetailsBtn = document.getElementById('close-appointment-details-btn');
        const viewAppointmentDetailsBtns = document.querySelectorAll('.view-appointment-details-btn');
        const appointmentDetailsContent = document.getElementById('appointment-details-content');

        // Rehydrate booking data from EJS-rendered object (should be kept in sync with controller logic)
        const bookingData = {
          <% allBookings.forEach(booking => { %>
            '<%= booking._id %>': {
              clientName: '<%= booking.user.name %>',
              clientEmail: '<%= booking.user.email %>',
              clientPhone: '<%= booking.user.phone %>',
              appointmentDate: '<%= new Date(booking.bookingDate).toLocaleDateString() %>',
              appointmentTime: '<%= booking.bookingTime %>',
              appointmentStatus: '<%= booking.status %>',
              services: [
                <% booking.services.forEach((service, index) => { %>
                {
                  name: '<%= service.serviceName %>',
                  category: 'Salon Service',
                  price: <%= service.basePrice || service.adminPrice || 0 %>,
                  duration: <%= service.durationMinutes || 0 %>,
                  quantity: 1
                }<%= index < booking.services.length - 1 ? ',' : '' %>
                <% }); %>
              ],
              totalAmount: <%= booking.paymentBreakdown?.customerPaid || 0 %>,
              salonEarning: <%= booking.paymentBreakdown?.salonEarning || 0 %>,
              paymentMethod: '<%= booking.payment?.method || "online" %>',
              paymentStatus: '<%= booking.payment?.status || "pending" %>',
              bookingType: '<%= booking.bookingType %>'
            },
          <% }); %>
        };

        function formatRupee(val) {
          return `â‚¹${(+val).toLocaleString('en-IN', {maximumFractionDigits: 2})}`;
        }

        viewAppointmentDetailsBtns.forEach(btn => {
          btn.addEventListener('click', function () {
            const appointmentId = this.getAttribute('data-id');
            const appointment = bookingData[appointmentId];
            if (!appointment || !appointmentDetailsContent) {
              alert('Appointment details not found');
              return;
            }
            // Calculate subtotal, tax, total
            const subtotal = appointment.services.reduce((sum, s) => sum + (s.price || 0), 0);
            const tax = +(subtotal * 0.05).toFixed(2);
            const total = subtotal + tax;
            const totalDuration = appointment.services.reduce((sum, s) => sum + (s.duration || 0), 0);
            appointmentDetailsContent.innerHTML = `
              <div class="client-info-section">
                <h4 class="section-subtitle">Client Information</h4>
                <div class="client-details">
                  <div class="client-field"><span class="field-name">Full Name:</span> <span class="field-value">${appointment.clientName}</span></div>
                  <div class="client-field"><span class="field-name">Email:</span> <span class="field-value">${appointment.clientEmail}</span></div>
                  <div class="client-field"><span class="field-name">Phone:</span> <span class="field-value">${appointment.clientPhone}</span></div>
                  <div class="client-field"><span class="field-name">Appointment Date:</span> <span class="field-value">${appointment.appointmentDate}</span></div>
                  <div class="client-field"><span class="field-name">Appointment Time:</span> <span class="field-value">${appointment.appointmentTime}</span></div>
                  <div class="client-field">
                    <span class="field-name">Appointment Status:</span>
                    <span class="field-value">
                      <span class="status-badge status-${appointment.appointmentStatus}">${appointment.appointmentStatus.replace(/_/g,' ')}</span>
                    </span>
                  </div>
                  <div class="client-field"><span class="field-name">Service Type:</span> <span class="field-value">${appointment.bookingType === 'home' ? 'Home Service':'In-Salon'}</span></div>
                </div>
              </div>
              <div class="order-items-section">
                <h4 class="section-subtitle">Service Details</h4>
                <div class="order-items">
                  ${appointment.services.map(service => `
                    <div class="order-item">
                      <div class="item-details">
                        <div class="item-name">${service.name}</div>
                        <div class="item-category">${service.category}</div>
                        <div class="item-price">${formatRupee(service.price)}</div>
                      </div>
                      <div class="item-quantity"><span class="quantity-badge">${service.quantity}</span></div>
                    </div>
                  `).join('')}
                </div>
                <div class="order-summary">
                  <div class="summary-row"><span>Service Duration:</span><span>${totalDuration} minutes</span></div>
                  <div class="summary-row"><span>Subtotal:</span><span>${formatRupee(subtotal)}</span></div>
                  <div class="summary-row"><span>Tax (5%):</span><span>${formatRupee(tax)}</span></div>
                  <div class="summary-row"><span>Payment Method:</span><span>${appointment.paymentMethod ? appointment.paymentMethod.toUpperCase() : ''}</span></div>
                  <div class="summary-row"><span>Payment Status:</span><span class="status-badge status-${appointment.paymentStatus}">${appointment.paymentStatus}</span></div>
                  <div class="summary-row summary-total"><span>Total Amount:</span><span>${formatRupee(total)}</span></div>
                  <div class="summary-row"><span>Salon Earnings:</span><span>${formatRupee(appointment.salonEarning)}</span></div>
                </div>
              </div>
            `;
            appointmentDetailsModal && appointmentDetailsModal.classList.add('active');
          });
        });

        function closeDetailsModal() {
          if (appointmentDetailsModal) appointmentDetailsModal.classList.remove('active');
        }
        closeAppointmentDetailsModal && closeAppointmentDetailsModal.addEventListener('click', closeDetailsModal);
        closeAppointmentDetailsBtn && closeAppointmentDetailsBtn.addEventListener('click', closeDetailsModal);

        // --- Appointment Confirmation ---
        document.querySelectorAll('.confirm-appointment-btn').forEach(btn => {
          btn.addEventListener('click', async function () {
            const appointmentId = this.getAttribute('data-id');
            const row = this.closest('tr');
            try {
              const response = await fetch('/salon/confirm-booking', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ bookingId: appointmentId })
              });
              const result = await response.json();
              if (result.success) {
                this.textContent = 'Confirmed';
                this.disabled = true;
                this.classList.remove('confirm-button');
                this.classList.add('secondary-button');
                if (row) {
                  const statusCell = row.querySelector('.status-badge');
                  if (statusCell) {
                    statusCell.textContent = 'Confirmed';
                    statusCell.className = 'status-badge status-confirmed';
                  }
                }
                alert('Appointment confirmed successfully!');
              } else {
                alert('Failed to confirm appointment: ' + result.message);
              }
            } catch (error) {
              console.error('Error confirming appointment:', error);
              alert('Error confirming appointment. Please try again.');
            }
          });
        });

        // --- Salon Profile Edit Management ---
        const editSalonBtn = document.getElementById('edit-salon-btn');
        const saveSalonBtn = document.getElementById('save-salon-btn');
        const cancelSalonBtn = document.getElementById('cancel-salon-btn');
        const profileActions = document.getElementById('profile-actions');
        const profileFields = document.querySelectorAll('#profile-page .profile-field');
        let originalValues = {};

        if (editSalonBtn) {
          editSalonBtn.addEventListener('click', function () {
            originalValues = {
              salonName: document.getElementById('salon-name')?.textContent || '',
              ownerName: document.getElementById('owner-name')?.textContent || '',
              emailAddress: document.getElementById('email-address')?.textContent || '',
              phoneNumber: document.getElementById('phone-number')?.textContent || '',
              businessAddress: document.getElementById('business-address')?.textContent || '',
              servicesOffered: document.getElementById('services-offered')?.textContent || '',
              serviceMode: document.getElementById('service-mode')?.textContent || ''
            };
            profileFields.forEach(field => {
              const fieldValue = field.querySelector('.field-value');
              if (!fieldValue) return;
              const fieldId = fieldValue.id;
              if (fieldId) {
                const currentValue = fieldValue.textContent;
                field.classList.add('editing');
                if (fieldId === 'business-address' || fieldId === 'services-offered') {
                  fieldValue.innerHTML = `<textarea style="width:100%;min-height:80px;padding:8px;border:1px solid #d1d5db;border-radius:4px;">${currentValue}</textarea>`;
                } else {
                  fieldValue.innerHTML = `<input type="text" value="${currentValue}" style="width:100%;padding:8px;border:1px solid #d1d5db;border-radius:4px;">`;
                }
              }
            });
            if (profileActions) profileActions.style.display = 'flex';
            editSalonBtn.style.display = 'none';
          });
        }

        if (saveSalonBtn) {
          saveSalonBtn.addEventListener('click', async function () {
            const updatedValues = {};
            profileFields.forEach(field => {
              const fieldValue = field.querySelector('.field-value');
              if (!fieldValue) return;
              const fieldId = fieldValue.id;
              if (fieldId) {
                const input = fieldValue.querySelector('input, textarea');
                if (input) {
                  updatedValues[fieldId] = input.value;
                }
              }
            });
            try {
              const response = await fetch('/salon/update-profile', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(updatedValues)
              });
              const result = await response.json();
              if (result.success) {
                for (const [fieldId, value] of Object.entries(updatedValues)) {
                  const el = document.getElementById(fieldId);
                  if (el) el.textContent = value;
                }
                alert('Salon details updated successfully!');
                exitEditMode();
              } else {
                alert('Failed to update salon details: ' + result.message);
              }
            } catch (error) {
              console.error('Error updating salon:', error);
              alert('Error updating salon details. Please try again.');
            }
          });
        }

        if (cancelSalonBtn) {
          cancelSalonBtn.addEventListener('click', function () {
            for (const [fieldId, value] of Object.entries(originalValues)) {
              const el = document.getElementById(fieldId);
              if (el) el.textContent = value;
            }
            exitEditMode();
          });
        }

        function exitEditMode() {
          profileFields.forEach(field => field.classList.remove('editing'));
          if (profileActions) profileActions.style.display = 'none';
          if (editSalonBtn) editSalonBtn.style.display = 'block';
        }

        // --- Appointment Service Duration Change ---
        document.querySelectorAll('.duration-input input').forEach(input => {
          input.addEventListener('change', async function () {
            const newDuration = this.value;
            const row = this.closest('tr');
            if (!row) return;
            const viewBtn = row.querySelector('.view-appointment-details-btn');
            if (!viewBtn) return;
            const appointmentId = viewBtn.getAttribute('data-id');
            if (!appointmentId) return;
            try {
              const response = await fetch('/salon/update-duration', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ bookingId: appointmentId, duration: newDuration })
              });
              const result = await response.json();
              if (!result.success) {
                alert('Failed to update duration: ' + result.message);
                this.value = this.defaultValue;
              }
            } catch (error) {
              console.error('Error updating duration:', error);
              alert('Error updating duration. Please try again.');
              this.value = this.defaultValue;
            }
          });
        });
      });
    </script>
</body>
</html>