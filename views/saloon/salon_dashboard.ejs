            closeUpdateAppointmentModal.addEventListener('click', closeUpdateAppointmentModalFunc);
            closeUpdateAppointmentBtn.addEventListener('click', closeUpdateAppointmentModalFunc);
            
            // Save updated appointment
            saveUpdateAppointmentBtn.addEventListener('click', function() {
                const appointmentId = updateAppointmentId.textContent;
                const selectedDate = updateAppointmentDate.value;
                const selectedStatus = updateAppointmentStatus.value;
                const selectedDuration = updateAppointmentDuration.value;
                const selectedStylist = updateAppointmentStylist.value;
                const selectedNotes = updateAppointmentNotes.value;
                
                // In a real app, you would save these changes to the database
                console.log(`Updating appointment ${appointmentId}:`, {
                    date: selectedDate,
                    status: selectedStatus,
                    duration: selectedDuration,
                    stylist: selectedStylist,
                    notes: selectedNotes
