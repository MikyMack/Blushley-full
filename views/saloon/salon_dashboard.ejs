            confirmAppointmentBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const appointmentId = this.getAttribute('data-id');
                    
                    // In a real app, you would update the appointment status in the database
                    console.log(`Confirming appointment ${appointmentId}`);
                    
                    // Update the UI
                    this.textContent = 'Confirmed';
                    this.disabled = true;
                    this.classList.remove('confirm-button');
                    this.classList.add('secondary-button');
                    
                    // Update the status badge
