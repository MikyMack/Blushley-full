            // Close appointment details modal
            function closeAppointmentDetailsModalFunc() {
                appointmentDetailsModal.classList.remove('active');
            }
            
            closeAppointmentDetailsModal.addEventListener('click', closeAppointmentDetailsModalFunc);
            closeAppointmentDetailsBtn.addEventListener('click', closeAppointmentDetailsModalFunc);
            
            // Salon Profile Management
            const editSalonBtn = document.getElementById('edit-salon-btn');
            const saveSalonBtn = document.getElementById('save-salon-btn');
            const cancelSalonBtn = document.getElementById('cancel-salon-btn');
            const profileActions = document.getElementById('profile-actions');
            const profileFields = document.querySelectorAll('#profile-page .profile-field');
            
            let originalValues = {};
            
            // Enable editing for salon details
            editSalonBtn.addEventListener('click', function() {
                // Store original values
                originalValues = {
                    salonName: document.getElementById('salon-name').textContent,
                    ownerName: document.getElementById('owner-name').textContent,
                    emailAddress: document.getElementById('email-address').textContent,
                    phoneNumber: document.getElementById('phone-number').textContent,
                    businessAddress: document.getElementById('business-address').textContent,
                    servicesOffered: document.getElementById('services-offered').textContent,
                    teamSize: document.getElementById('team-size').textContent,
                    yearsBusiness: document.getElementById('years-business').textContent
                };
                
                // Convert fields to editable inputs
                profileFields.forEach(field => {
                    const fieldValue = field.querySelector('.field-value');
                    const fieldId = fieldValue.id;
                    
                    if (fieldId) {
                        const currentValue = fieldValue.textContent;
                        field.classList.add('editing');
                        
                        if (fieldId === 'business-address' || fieldId === 'services-offered') {
                            fieldValue.innerHTML = `<textarea style="width: 100%; min-height: 80px;">${currentValue}</textarea>`;
                        } else {
                            fieldValue.innerHTML = `<input type="text" value="${currentValue}" style="width: 100%;">`;
                        }
                    }
                });
                
                // Show save/cancel buttons
                profileActions.style.display = 'flex';
                // Hide edit button
                editSalonBtn.style.display = 'none';
            });
            
            // Save salon changes
            saveSalonBtn.addEventListener('click', function() {
                // Collect updated values
                const updatedValues = {};
                
                profileFields.forEach(field => {
                    const fieldValue = field.querySelector('.field-value');
                    const fieldId = fieldValue.id;
                    
                    if (fieldId) {
                        const input = fieldValue.querySelector('input, textarea');
                        updatedValues[fieldId] = input.value;
                    }
                });
                
                // Update the displayed values
                for (const [fieldId, value] of Object.entries(updatedValues)) {
                    document.getElementById(fieldId).textContent = value;
                }
                
                // In a real app, you would save to a database here
                alert('Salon details updated successfully!');
                
                // Exit edit mode
                exitEditMode();
            });
            
            // Cancel salon editing
            cancelSalonBtn.addEventListener('click', function() {
                // Restore original values
                for (const [fieldId, value] of Object.entries(originalValues)) {
                    document.getElementById(fieldId).textContent = value;
                }
                
                // Exit edit mode
                exitEditMode();
            });
            
            // Helper function to exit edit mode
            function exitEditMode() {
                profileFields.forEach(field => {
                    field.classList.remove('editing');
                });
                
                // Hide save/cancel buttons
                profileActions.style.display = 'none';
                // Show edit button
                editSalonBtn.style.display = 'block';
            }
            
            // Duration input handling
            const durationInputs = document.querySelectorAll('.duration-input input');
            durationInputs.forEach(input => {
                input.addEventListener('change', function() {
                    const newDuration = this.value;
                    // In a real app, you would save this to the database
                    console.log(`Duration updated to ${newDuration} minutes`);
                });
            });
            
            // Available Slots Management
            const editSlotsBtn = document.getElementById('edit-slots-btn');
            const saveSlotsBtn = document.getElementById('save-slots-btn');
            const cancelSlotsBtn = document.getElementById('cancel-slots-btn');
            const slotsActions = document.getElementById('slots-actions');
            const slotsGrid = document.getElementById('slots-grid');
            const updateSlotsGrid = document.getElementById('update-slots-grid');
            const slotsDate = document.getElementById('slots-date');
            
            // Sample available slots data
            const availableSlotsData = {
                '2023-10-15': {
                    '9:00 AM': { available: false, appointmentId: 'APP-001' },
                    '9:30 AM': { available: true },
                    '10:00 AM': { available: true },
                    '10:30 AM': { available: false, appointmentId: 'APP-002' },
                    '11:00 AM': { available: true },
                    '11:30 AM': { available: false, appointmentId: 'APP-003' },
                    '12:00 PM': { available: true },
                    '12:30 PM': { available: true },
                    '1:00 PM': { available: false, appointmentId: 'APP-004' },
                    '1:30 PM': { available: true },
                    '2:00 PM': { available: true },
                    '2:30 PM': { available: true },
                    '3:00 PM': { available: true },
                    '3:30 PM': { available: true },
                    '4:00 PM': { available: true },
                    '4:30 PM': { available: true },
                    '5:00 PM': { available: true }
                }
            };
            
            // Function to render available slots
            function renderAvailableSlots(date, gridElement, isEditable = false) {
                const slots = availableSlotsData[date] || {};
                gridElement.innerHTML = '';
                
                const timeSlots = [
                    '9:00 AM', '9:30 AM', '10:00 AM', '10:30 AM', '11:00 AM', '11:30 AM',
                    '12:00 PM', '12:30 PM', '1:00 PM', '1:30 PM', '2:00 PM', '2:30 PM',
                    '3:00 PM', '3:30 PM', '4:00 PM', '4:30 PM', '5:00 PM'
                ];
                
                timeSlots.forEach(time => {
                    const slot = slots[time] || { available: true };
                    const slotElement = document.createElement('div');
                    slotElement.className = `slot-item ${slot.available ? '' : 'unavailable'} ${isEditable ? 'editable' : ''}`;
                    
                    if (isEditable) {
                        slotElement.innerHTML = `
                            <div class="slot-time">${time}</div>
                            <div class="slot-status">${slot.available ? 'Available' : 'Booked'}</div>
                        `;
                        
                        slotElement.addEventListener('click', function() {
                            if (slot.available) {
                                slot.available = false;
                                slotElement.classList.add('unavailable');
                                slotElement.querySelector('.slot-status').textContent = 'Booked';
                            } else {
                                slot.available = true;
                                slotElement.classList.remove('unavailable');
                                slotElement.querySelector('.slot-status').textContent = 'Available';
                            }
                        });
                    } else {
                        slotElement.innerHTML = `
                            <div class="slot-time">${time}</div>
                            <div class="slot-status">${slot.available ? 'Available' : 'Booked'}</div>
                        `;
                    }
                    
                    gridElement.appendChild(slotElement);
                });
            }
            
            // Initial render of available slots
            renderAvailableSlots(slotsDate.value, slotsGrid);
            
            // Date change handler for available slots
            slotsDate.addEventListener('change', function() {
                renderAvailableSlots(this.value, slotsGrid);
            });
            
            // Edit slots button handler
            editSlotsBtn.addEventListener('click', function() {
                // Enable editing mode
                const slotItems = slotsGrid.querySelectorAll('.slot-item');
                slotItems.forEach(item => {
                    item.classList.add('editable');
                    item.addEventListener('click', function() {
                        if (this.classList.contains('unavailable')) {
                            this.classList.remove('unavailable');
                            this.querySelector('.slot-status').textContent = 'Available';
                        } else {
                            this.classList.add('unavailable');
                            this.querySelector('.slot-status').textContent = 'Booked';
                        }
                    });
                });
                
                // Show save/cancel buttons
                slotsActions.style.display = 'flex';
                // Hide edit button
                editSlotsBtn.style.display = 'none';
            });
            
            // Save slots button handler
            saveSlotsBtn.addEventListener('click', function() {
                // Collect updated slot availability
                const slotItems = slotsGrid.querySelectorAll('.slot-item');
                const updatedSlots = {};
                
                slotItems.forEach(item => {
                    const time = item.querySelector('.slot-time').textContent;
                    const isAvailable = !item.classList.contains('unavailable');
                    updatedSlots[time] = { available: isAvailable };
                });
                
                // Update the slots data
                availableSlotsData[slotsDate.value] = updatedSlots;
                
                // In a real app, you would save to a database here
                alert('Available slots updated successfully!');
                
                // Exit edit mode
                exitSlotsEditMode();
            });
            
            // Cancel slots editing
            cancelSlotsBtn.addEventListener('click', function() {
                // Restore original slots
                renderAvailableSlots(slotsDate.value, slotsGrid);
                
                // Exit edit mode
                exitSlotsEditMode();
            });
            
            // Helper function to exit slots edit mode
            function exitSlotsEditMode() {
                // Remove editable class and event listeners
                const slotItems = slotsGrid.querySelectorAll('.slot-item');
                slotItems.forEach(item => {
                    item.classList.remove('editable');
                    // Remove all click event listeners
                    const newItem = item.cloneNode(true);
                    item.parentNode.replaceChild(newItem, item);
                });
                
                // Hide save/cancel buttons
                slotsActions.style.display = 'none';
                // Show edit button
                editSlotsBtn.style.display = 'block';
            }
            
