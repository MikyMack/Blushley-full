                    updateAppointmentStatus.value = appointmentData.appointmentStatus;
                    updateAppointmentDuration.value = appointmentData.duration;
                    updateAppointmentStylist.value = 'sarah'; // In a real app, this would come from the appointment data
                    updateAppointmentNotes.value = appointmentData.notes;
                    
                    // Render available slots for the selected date
                    renderAvailableSlots(updateAppointmentDate.value, updateSlotsGrid, false);
                    
                    // Date change handler for update modal
                    updateAppointmentDate.addEventListener('change', function() {
                        renderAvailableSlots(this.value, updateSlotsGrid, false);
